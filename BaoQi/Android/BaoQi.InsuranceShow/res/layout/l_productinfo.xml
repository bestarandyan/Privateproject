<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <include layout="@layout/head_title_layout" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/body_bg"
        android:orientation="vertical" >

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/h_backHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/map" 
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip" />

            <Button
                android:id="@+id/h_backhomebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftbuttonbg"
                android:layout_marginTop="7dip"
                android:layout_marginRight="10dip"
                android:textSize="18sp"
                android:text="首页"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_marginTop="7dip"
                android:text=">"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/query_hospitalBtn"
                android:layout_width="wrap_content"
                android:layout_marginTop="7dip"
                android:layout_height="wrap_content"
                android:background="@drawable/leftbuttonbg"
                android:layout_marginRight="10dip"
                android:textSize="18sp"
                android:text="产品中心"
                android:textColor="@color/white" />
            
        </LinearLayout>
        </LinearLayout>
        

        <LinearLayout 
            android:background="@color/white"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginBottom="20dip"
            android:layout_marginRight="20dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <LinearLayout 
                android:layout_marginTop="20dip"
        		android:paddingLeft="24dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView android:id="@+id/text1"
                    android:textSize="18sp"
            		android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                
                <LinearLayout android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">
                    <ImageView android:id="@+id/image"
                        android:background="@drawable/product_tu1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    
                    <LinearLayout android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:paddingLeft="20dip"
                        android:layout_height="wrap_content">
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView android:text="产品简介："
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView 
                                android:id="@+id/text2"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView android:text="保险期间："
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/text3"
                                 android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView android:text="保        费："
                                android:textColor="@color/green" 
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView android:text="价格可以咨询当地销售人员"
                                android:id="@+id/text4"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        
                        <ImageView android:background="@drawable/line2"
                					android:layout_width="fill_parent"
                					android:layout_marginTop="20dip"
                					android:layout_height="wrap_content"/>
                        
                        <LinearLayout android:orientation="horizontal"
                            android:layout_marginTop="20dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <Button android:background="@drawable/product_btn01"
                                android:id="@+id/_btn1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <Button android:background="@drawable/product_btn02"
                                android:layout_width="wrap_content"
                                android:id="@+id/_btn2"
                                android:layout_height="wrap_content"/>
                            <Button android:background="@drawable/product_btn07"
                                android:layout_width="wrap_content"
                                android:id="@+id/_btn3"
                                android:layout_height="wrap_content"/>
                            <Button android:background="@drawable/product_btn08"
                                android:layout_width="wrap_content"
                                android:id="@+id/_btn4"
                                android:layout_height="wrap_content"/>
                            
                        </LinearLayout>
                        
                        
                        
                    </LinearLayout>
                </LinearLayout>
                
                
            </LinearLayout>
        
            
            
            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:background="@drawable/product_view_title_bg"
                android:gravity="center_vertical"
                android:layout_marginTop="30dip"
                android:layout_height="wrap_content">
                <TextView android:text="该产品的详细介绍："
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/green"
                    android:textSize="20dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button android:id="@+id/btn_info1"
                    android:layout_marginTop="2dip"
                    android:text="产品特色"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/product_view_tag_on"/>
                <Button android:id="@+id/btn_info2"
                    android:text="了解详细"
                    android:layout_marginTop="2dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/product_view_tag"/>
                <Button android:id="@+id/btn_info3"
                    android:text="购买须知"
                    android:layout_marginTop="2dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/product_view_tag"/>
            </LinearLayout>
            
            <ScrollView android:layout_width="fill_parent"
                android:layout_height="fill_parent">
              	<ImageView android:id="@+id/info"
              	    android:background="@drawable/product_teise_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
            </ScrollView>
                  
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>