<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <include layout="@layout/head_title_layout" /> 
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/body_bg"
        android:orientation="vertical" >

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/h_backHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/map" 
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip" />

            <Button
                android:id="@+id/h_backhomebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftbuttonbg"
                android:layout_marginTop="7dip"
                android:layout_marginRight="10dip"
                android:textSize="18sp"
                android:text="首页"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_marginTop="7dip"
                android:text=">"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/send_btn"
                android:layout_width="wrap_content"
                android:layout_marginTop="7dip"
                android:layout_height="wrap_content"
                android:background="@drawable/leftbuttonbg"
                android:layout_marginRight="10dip"
                android:textSize="18sp"
                android:text="站内信"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_marginTop="7dip"
                android:text=">"
                android:textColor="@color/white" />
            
            <Button
                android:layout_width="wrap_content"
                android:layout_marginTop="7dip"
                android:layout_height="wrap_content"
                android:background="@drawable/leftbuttonbg"
                android:layout_marginRight="10dip"
                android:textSize="18sp"
                android:text="发送新信息"
                android:textColor="@color/white" />
        </LinearLayout>
        </LinearLayout>
        

        <LinearLayout 
            android:orientation="horizontal"
            android:background="@color/green"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dip"
            android:padding="15dip"
            android:layout_marginBottom="20dip"
            android:layout_marginRight="20dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
        <!-- 昨边 -->
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- 左上 -->
        	<LinearLayout android:orientation="vertical"
            android:background="@drawable/email_bg"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            >
            
        	    <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView android:background="@drawable/email_tu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button android:text="写信"
                    android:id="@+id/btn_write"
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:background="@drawable/leftbuttonbg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            
            
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dip"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView android:background="@drawable/email_tu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button android:text="收信"
                    android:id="@+id/btn_shouxin"
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:background="@drawable/leftbuttonbg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            
        </LinearLayout>
        
        
        <!-- 左下 -->
        
        <LinearLayout android:orientation="vertical"
            android:background="@drawable/email_bg01"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dip"
            android:paddingTop="20dip"
            android:paddingLeft="10dip"
            android:layout_height="wrap_content"
            >
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button android:id="@+id/shoujian_btn"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                android:text="收件箱"
                android:background="@drawable/leftbuttonbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <TextView android:text="(20)"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"/>
            </LinearLayout>
            <ImageView android:background="@drawable/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            
            
            <!-- 草稿 -->
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button android:id="@+id/chaogao_btn"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                android:text="草稿箱"
                android:background="@drawable/leftbuttonbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <TextView android:text=""
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"/>
            </LinearLayout>
            <ImageView android:background="@drawable/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            
            
            <!-- 垃圾箱 -->
            
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button android:id="@+id/laji_btn"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                android:text="垃圾箱"
                android:background="@drawable/leftbuttonbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <TextView android:text=""
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"/>
            </LinearLayout>
            <ImageView android:background="@drawable/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            
            
            <!-- 已发送 -->
            
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button android:id="@+id/fasong_btn"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                android:text="已发送"
                android:background="@drawable/leftbuttonbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <TextView android:text="(20)"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"/>
            </LinearLayout>
            <ImageView android:background="@drawable/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            
            
            <!-- 已删除 -->
            
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button android:id="@+id/chanchu_btn"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                android:text="已删除"
                android:background="@drawable/leftbuttonbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <TextView android:text=""
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"/>
            </LinearLayout>
            
            
            
        </LinearLayout>
        </LinearLayout>
        <!-- 右边 -->
        <RelativeLayout android:orientation="vertical"
            android:layout_marginLeft="10dip"
            android:background="@drawable/email_right_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- 按钮部分 1-->
            <LinearLayout
                android:id="@+id/layout1" 
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dip"
                android:paddingLeft="10dip"
                android:layout_height="wrap_content">
                <Button android:background="@drawable/btn02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/btn01"
                    android:text="发送"/>
                
                <Button android:background="@drawable/btn02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dip"
                    android:id="@+id/btn02"
                    android:text="存草稿"/>
                
                <Button android:background="@drawable/btn02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/btn03"
                    android:layout_marginLeft="20dip"
                    android:text="取消"/>
                
                
            </LinearLayout>
            
            <!-- title -->
            <LinearLayout android:orientation="horizontal"
                android:layout_below="@id/layout1"
                android:id="@+id/layout2"
                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/email_content_title_bg"
                android:layout_height="wrap_content">
                <TextView android:text="发布新短信"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="22sp"/>
                
            </LinearLayout>
            
            
            
            <!-- 底部按钮 -->
            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:id="@+id/layout3"
                android:paddingBottom="5dip"
                android:layout_alignParentBottom="true"
                android:paddingLeft="10dip"
                android:paddingTop="5dip"
                android:background="@drawable/email_content_title_bg"
                android:layout_height="wrap_content">
                
                <Button android:background="@drawable/btn02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/btn05"
                    android:text="发送"/>
                
                <Button android:background="@drawable/btn02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dip"
                    android:id="@+id/btn06"
                    android:text="存草稿"/>
                
                <Button android:background="@drawable/btn02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/btn07"
                    android:layout_marginLeft="20dip"
                    android:text="取消"/>
              
                
                
             </LinearLayout>
            
            <!-- 列表 -->
            <LinearLayout android:id="@+id/listview"
                android:padding="50dip"
                android:layout_centerInParent="true"
                android:layout_below="@id/layout2"
                android:orientation="horizontal"
                android:layout_above="@id/layout3"
                android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           	>
                <!-- 左边 -->
                <LinearLayout android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                	<LinearLayout android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView android:text="收件人"
                        android:paddingLeft="18dip"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText android:layout_width="500dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"/>
                </LinearLayout>    
                
                <LinearLayout android:orientation="horizontal"
                    android:layout_marginTop="20dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView android:text="短信内容"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"/>
                    <EditText android:layout_width="500dip"
                        android:layout_marginLeft="10dip"
                        android:inputType="textMultiLine"
                        android:layout_height="250dip"/>
                </LinearLayout>  
                </LinearLayout>
                
                <!-- 右边 -->
                <LinearLayout android:orientation="vertical"
                    android:layout_marginLeft="50dip"
                    android:background="@drawable/lxr_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </LinearLayout>
            </LinearLayout>
            
            
            
            
        </RelativeLayout>
            

        
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>