<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout1"
    android:orientation="vertical"
    android:background="@drawable/product_szlb_bg"
    android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:layout_marginTop="10dip"
            android:layout_marginRight="20dip"
            android:layout_width="810dip"
            android:layout_height="420dip">
    <LinearLayout
        android:layout_marginTop="20dip"
        android:paddingLeft="20dip"
        android:orientation="horizontal" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button android:id="@+id/renshou"
            android:text="人寿险"
            android:textColor="@color/white"
            android:background="@drawable/product_tag_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button android:id="@+id/caichan"
            android:text="财产险"
            android:textColor="@color/black"
            android:layout_marginLeft="5dip"
            android:background="@drawable/product_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="5dip"
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        android:background="@color/black"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:paddingLeft="50dip" 
        >
        <TextView android:text="个人险"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <GridView
            android:id="@+id/gridview"
            android:listSelector="@drawable/select"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnWidth="120dip"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth" >
        </GridView>
        
        <Button 
            android:background="@drawable/leftbuttonbg"
            android:id="@+id/tuan_btn"
            android:text="团体寿险"
            android:textSize="16sp"
            android:layout_marginTop="50dip"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <Button 
            android:background="@drawable/leftbuttonbg"
            android:text="机构代理保险"
            android:textSize="16sp"
            android:id="@+id/jigou_btn"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    

</LinearLayout>