<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
     <include layout="@layout/head_title_layout" />  
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/body_bg"
        android:orientation="vertical" >

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/h_backHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/map" 
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip" />

            <Button
                android:id="@+id/h_backhomebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftbuttonbg"
                android:layout_marginTop="7dip"
                android:layout_marginRight="10dip"
                android:textSize="18sp"
                android:text="首页"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_marginTop="7dip"
                android:text=">"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/query_hospitalBtn"
                android:layout_width="wrap_content"
                android:layout_marginTop="7dip"
                android:layout_height="wrap_content"
                android:background="@drawable/leftbuttonbg"
                android:layout_marginRight="10dip"
                android:textSize="18sp"
                android:text="公司介绍"
                android:textColor="@color/white" />
        </LinearLayout>
        </LinearLayout>
        

            <LinearLayout
                android:orientation="vertical"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginBottom="20dip"
            android:layout_marginRight="20dip"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        
                <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="#02AF5F"
        android:orientation="horizontal" >

        <Button
            android:textColor="@color/black"
            android:id="@+id/btn_1"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01_on"
            android:gravity="center"
            android:text="公司新闻"
            android:textSize="18sp" />

        <Button
            android:textColor="@color/white"
            android:id="@+id/btn_2"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01"
            android:gravity="center"
            android:text="关于中国人寿"
            android:textSize="18sp" />

        <Button
            android:textColor="@color/white"
            android:id="@+id/btn_3"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01"
            android:gravity="center"
            android:text="客户与服务"
            android:textSize="18sp" />

        <Button
            android:textColor="@color/white"
            android:id="@+id/btn_4"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01"
            android:gravity="center"
            android:text="战略合作"
            android:textSize="18sp" />

        <Button
            android:textColor="@color/white"
            android:id="@+id/btn_5"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01"
            android:gravity="center"
            android:text="公司荣誉"
            android:textSize="18sp" />
    </LinearLayout>
    
                <ScrollView 
                    android:id="@+id/image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="gone">
    
                	<ImageView
                	    android:id ="@+id/image5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    />
                </ScrollView>
    
                <LinearLayout android:id="@+id/linear"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    
                    <ListView 
                        android:drawSelectorOnTop="false"
            	android:cacheColorHint="#00000000"
                        android:layout_marginTop="50dip"
                        android:layout_marginBottom="50dip"
                    android:id="@+id/listview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    </ListView>
                    
                    <ScrollView android:layout_width="fill_parent"
          				android:layout_height="fill_parent">
    
                <LinearLayout android:id="@+id/linear"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                  
                    <ImageView 
                        android:id="@+id/image1"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView 
                        android:visibility="gone"
                        android:id="@+id/image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView 
                        android:visibility="gone"
                        android:id="@+id/image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView 
                        android:visibility="gone"
                        android:id="@+id/image4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>
                    </ScrollView>
                    
                </LinearLayout>
                
                
        </LinearLayout>
   
        
    </LinearLayout>

</LinearLayout>