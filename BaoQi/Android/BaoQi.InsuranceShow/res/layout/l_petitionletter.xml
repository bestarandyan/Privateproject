        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
                android:id="@+id/h_backHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/map" 
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip" />

            <Button
                android:id="@+id/h_backhomebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftbuttonbg"
                android:layout_marginTop="7dip"
                android:layout_marginRight="10dip"
                android:textSize="18sp"
                android:text="首页"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_marginTop="7dip"
                android:text=">"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/query_hospitalBtn"
                android:layout_width="wrap_content"
                android:layout_marginTop="7dip"
                android:layout_height="wrap_content"
                android:background="@drawable/leftbuttonbg"
                android:layout_marginRight="10dip"
                android:textSize="18sp"
                android:text="信访"
                android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout android:layout_marginLeft="15dip"   android:layout_marginRight="15dip" 
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginTop="10dip"
        android:background="#02AF5F"
        android:orientation="horizontal" >

        <Button
            android:textColor="@color/black"
            android:id="@+id/btn_1"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01_on"
            android:gravity="center"
            android:text="在线信访"
            android:textSize="18sp" />

        <Button
            android:textColor="@color/white"
            android:id="@+id/btn_2"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01"
            android:gravity="center"
            android:text="信访查询"
            android:textSize="18sp" />

    </LinearLayout>
    
    <LinearLayout android:layout_marginLeft="15dip"  
