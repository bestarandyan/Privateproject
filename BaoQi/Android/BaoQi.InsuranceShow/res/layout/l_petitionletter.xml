                    />
            </LinearLayout>
            
            <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal" >

