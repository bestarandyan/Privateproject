                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:gravity="right"
                        android:text="信访投诉人身份"
                        android:textSize="20sp" />
                </LinearLayout>

                <Spinner 
                    android:layout_marginLeft="5dip" android:prompt="@string/choice"
                    android:layout_width="500dip" android:layout_marginTop="5dip"   
