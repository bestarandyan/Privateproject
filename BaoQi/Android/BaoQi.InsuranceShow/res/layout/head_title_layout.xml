<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <TextView android:layout_marginLeft="20dip"
        android:layout_width="wrap_content" android:textSize="18sp"
        android:layout_height="wrap_content"
        android:text="上海" />

    <ImageView android:layout_marginLeft="20dip"
        android:layout_width="wrap_content"
          android:src="@drawable/ico01"
        android:layout_height="wrap_content" />

    <TextView android:layout_marginLeft="20dip"
        android:layout_width="wrap_content" android:textSize="18sp"
        android:layout_height="wrap_content"
        android:text="多云转晴" />

    <TextView android:layout_marginLeft="20dip"
        android:layout_width="wrap_content" android:textSize="18sp"
        android:layout_height="wrap_content"
        android:text="12℃-14℃" />

    <TextView android:layout_marginLeft="20dip"
        android:layout_width="wrap_content" android:textSize="18sp"
        android:layout_height="wrap_content"
        android:text="明天:10℃-13℃" />

    <TextView android:layout_marginLeft="20dip"
        android:layout_width="wrap_content" android:textSize="18sp"
        android:layout_height="wrap_content"
        android:text="后天:12℃-22℃" />

    <TextView android:layout_marginLeft="50dip"
        android:layout_width="wrap_content" android:textSize="18sp"
        android:layout_height="wrap_content"
        android:text="2012年03月24日  下午：13点29分       星期三" />
    
 <TextView android:layout_marginLeft="80dip"
        android:layout_width="wrap_content" android:textSize="18sp"
        android:layout_height="wrap_content"
        android:text="张国立" />
 
 <TextView android:layout_marginLeft="20dip"
        android:layout_width="wrap_content" android:textSize="18sp"
        android:layout_height="wrap_content" android:textColor="#CE0000"
       android:text="[退出]" />
 </LinearLayout>
 <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
 <ImageView
        android:layout_width="wrap_content"
          android:src="@drawable/logo_bg"
        android:layout_height="wrap_content" />
 </LinearLayout>
</LinearLayout>