<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- 右边板块 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 选择被保险人 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/book_tag"
                    android:gravity="center"
                    android:text="选择被保险人"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dip"
                    android:background="@color/green"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="1dip"
                        android:background="#B0E0E6"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/search_2"
                            android:layout_width="200dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"  android:layout_marginLeft="50dip"
                            android:gravity="right"
                            android:text="被保险人性别"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <RadioButton
                            android:id="@+id/radiobtn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="50dip"
                            android:text="男"
                            android:textColor="@color/black"
                            android:textSize="20dip" />

                        <RadioButton
                            android:id="@+id/radiobtn2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="女"
                            android:textColor="@color/black"
                            android:textSize="20dip" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="1dip"
                        android:background="#B0E0E6"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/search_2"
                            android:layout_width="200dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:gravity="right"
                            android:text="计划书名称:"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <EditText
                        android:layout_width="500dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:text="中国人寿计划书" />
                </LinearLayout>
            </LinearLayout>

            <!-- 选择险种 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_marginTop="5dip"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/book_tag"
                    android:gravity="center"
                    android:text="选择投保人"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dip"
                    android:background="@color/green" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"    
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="5dip"
                        android:background="#B0E0E6"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/search_2"
                            android:layout_width="200dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:gravity="right"
                            android:text="投保人姓名:"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <EditText
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:text="李国华" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="5dip"
                        android:background="#B0E0E6"   android:layout_marginLeft="30dip"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/search_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                         
                            android:layout_marginTop="5dip"
                            android:gravity="right"
                            android:text="投保人性别:"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"    android:layout_marginTop="9dip"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radiobtn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="50dip"
                            android:text="男"
                            android:textColor="@color/black"
                            android:textSize="20dip" />

                        <RadioButton
                            android:id="@+id/radiobtn2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="女"
                            android:textColor="@color/black"
                            android:textSize="20dip" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="1dip"
                        android:background="#B0E0E6"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/search_2"
                            android:layout_width="200dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:gravity="right"
                            android:text="投保人年龄:"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <EditText
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:text="31" />

                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="周岁"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 险种信息设置 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"    android:layout_marginTop="5dip"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/book_tag"
                    android:gravity="center"
                    android:text="选择被保险人"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dip"
                    android:background="@color/green" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="1dip"
                        android:background="#B0E0E6"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/search_2"
                            android:layout_width="200dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:gravity="right"
                            android:text="是投保人的:"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <Spinner android:id="@+id/s1"
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:text="" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="5dip"   android:layout_marginLeft="50dip"
                        android:background="#B0E0E6"
                        android:gravity="center"
                        android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="被保人姓名:"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                    </LinearLayout>
                    <EditText
                        android:id="@+id/search_2"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"   android:layout_marginTop="5dip" 
                        android:layout_marginRight="15dip"
                        android:text="王元清"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"  
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="1dip"
                        android:background="#B0E0E6"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/search_2"
                            android:layout_width="200dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:gravity="right"
                            android:text="被保人年龄:"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <EditText
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:text="20" />

                    <TextView
                   
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="周岁"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="1dip"
                        android:background="#B0E0E6"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            
                            android:layout_width="200dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:gravity="right"
                            android:text="职业风险等级:"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <Spinner android:id="@+id/s2"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip" />
                    
                    <Button android:id="@+id/add" android:layout_width="wrap_content"   android:layout_marginLeft="150dip"
                        android:layout_height="wrap_content" android:background="@drawable/btn04" android:text="增加被保险人"></Button>
                </LinearLayout>
            </LinearLayout>

            <!-- 已选险种 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"  android:layout_marginTop="5dip"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dip"  
                    android:background="@color/green" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"  android:background="#B0E0E6"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="1dip"
                        android:background="#B0E0E6"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/search_2"
                            android:layout_width="50dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip"
                            android:gravity="center"
                            android:text="选择"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/search_2"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dip"
                            android:gravity="center"
                            android:text="是投保人的"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/search_2"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dip"
                            android:gravity="center"
                            android:text="被保人姓名"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/search_2"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dip"
                            android:gravity="center"
                            android:text="年龄"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/search_2"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dip"
                            android:gravity="center"
                            android:text="性别"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/search_2"
                            android:layout_width="150dip"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="职业风险等级"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ListView android:id="@+id/listview"
                        android:layout_width="wrap_content"
                        android:layout_height="280dip"
                        android:layout_marginTop="1dip"
                        android:background="#B0E0E6" >
                    </ListView>
                </LinearLayout>
                                                  <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dip" android:gravity="center"
                    android:orientation="horizontal" >
             <Button android:id="@+id/next" android:layout_width="wrap_content"   
                        android:layout_height="wrap_content" android:background="@drawable/btn04" android:text="下一步"></Button>
             <Button android:id="@+id/del" android:layout_width="wrap_content"  
                        android:layout_height="wrap_content" android:background="@drawable/btn04" android:text="删除被保人"></Button>
             </LinearLayout>
            </LinearLayout>
        </LinearLayout>         
    </ScrollView>
</LinearLayout>