<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <include layout="@layout/head_title_layout" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/body_bg"
        android:orientation="vertical" >

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/h_backHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/map" 
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip" />

            <Button
                android:id="@+id/h_backhomebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftbuttonbg"
                android:layout_marginTop="7dip"
                android:layout_marginRight="10dip"
                android:textSize="18sp"
                android:text="首页"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_marginTop="7dip"
                android:text=">"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/query_hospitalBtn"
                android:layout_width="wrap_content"
                android:layout_marginTop="7dip"
                android:layout_height="wrap_content"
                android:background="@drawable/leftbuttonbg"
                android:layout_marginRight="10dip"
                android:textSize="18sp"
                android:text="短期意外险"
                android:textColor="@color/white" />
            
        </LinearLayout>
        </LinearLayout>
        

        <LinearLayout 
            android:background="@color/white"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginBottom="20dip"
            android:layout_marginRight="20dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <LinearLayout 
                android:layout_marginTop="20dip"
        		android:paddingLeft="24dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView android:id="@+id/text1"
                    android:textSize="18sp"
            		android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                
                <LinearLayout android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content">
                    <ImageView android:id="@+id/image"
                        android:background="@drawable/ynzhywx01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    
                    <LinearLayout android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:paddingLeft="20dip"
                        android:layout_height="wrap_content">
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView android:text="产品简介："
                                android:textColor="#056F99"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView 
                                android:id="@+id/text2"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_width="fill_parent"
                                android:layout_marginRight="50dip"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView android:text="适用人群："
                                android:textColor="#056F99"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/text3"
                                 android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView android:text="保险期限："
                                android:textColor="#056F99"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/text4"
                                 android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView android:text="保单形式："
                                android:textColor="#056F99"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/text5"
                                 android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView android:text="支付方式："
                                android:textColor="#056F99"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="信用卡 网上银行 快钱 支付宝 财付通"
                                 android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView android:text="保险责任："
                                android:textColor="#056F99"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="请阅读"
                                 android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/text6"
                                 android:textSize="16sp"
                                android:textColor="#FF6600"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        
                        <LinearLayout android:orientation="horizontal"
                            android:layout_marginTop="20dip"
                            android:background="#dddddd"
                            android:padding="10dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <Button android:background="@drawable/product_btn"
                                android:id="@+id/_btn1"
                                android:text="自由报价"
                                android:textColor="#FFFFFF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView android:text="现在续保"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="2.5折"
                                 android:textSize="16sp"
                                android:textColor="#FF6600"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="优惠！"
                                 android:textSize="16sp"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="我要投保"
                                 android:textSize="16sp"
                                android:textColor="#FF6600"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            
                        </LinearLayout>
                        
                        
                        
                    </LinearLayout>
                </LinearLayout>
                
                
            </LinearLayout>
        
            
            
            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:background="@drawable/product_view_title_bg"
                android:gravity="center_vertical"
                android:layout_marginTop="30dip"
                android:layout_height="wrap_content">
                <Button android:id="@+id/btn_info1"
                    android:layout_marginLeft="50dip"
                    android:layout_marginTop="2dip"
                    android:text="产品描述"
                    android:textColor="#FF6600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/product_view_tag_on"/>
                <Button android:id="@+id/btn_info2"
                    android:text="保险案例"
                    android:layout_marginTop="2dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/product_view_tag"/>
                <Button android:id="@+id/btn_info3"
                    android:text="理赔流程"
                    android:layout_marginTop="2dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/product_view_tag"/>
                <Button android:id="@+id/btn_info4"
                    android:text="投保须知"
                    android:layout_marginTop="2dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/product_view_tag"/>
                <Button android:id="@+id/btn_info5"
                    android:text="常见问题"
                    android:layout_marginTop="2dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/product_view_tag"/>
            </LinearLayout>
            
            <ScrollView android:layout_width="fill_parent"
                android:layout_height="fill_parent">
              	<ImageView android:id="@+id/info"
              	    android:background="@drawable/productnew01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
            </ScrollView>
                  
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>