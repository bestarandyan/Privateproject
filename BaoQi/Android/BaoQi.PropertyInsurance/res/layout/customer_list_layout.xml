<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"  android:background="@drawable/body_bg"
    android:orientation="vertical" >
	<include layout="@layout/head_title_layout"/>
    <!-- title 首页条目 -->

    <LinearLayout android:layout_marginLeft="15dip"   android:layout_marginRight="15dip"   android:layout_marginTop="5dip" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/map" />

        <TextView
            android:id="@+id/top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="首页"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" > 客户查询"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout android:layout_marginLeft="15dip"   android:layout_marginRight="15dip" 
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/guobg1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/search_1"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="7dip"
            android:textColor="#000000"
            android:background="@drawable/single_tag01"
            android:gravity="center"
            android:text="客户"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/search_2"
            android:textColor="#FFFFFF"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01"
            android:gravity="center"
            android:text="准客户"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/search_3"
            android:textColor="#FFFFFF"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01"
            android:gravity="center"
            android:text="增员"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/search_4"
            android:textColor="#FFFFFF"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01"
            android:gravity="center"
            android:text="准客户转客户"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/search_5"
            android:layout_width="140dip"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01"
            android:gravity="center"
            android:text="高级查询"
            android:textSize="18sp" />
    </LinearLayout>
 <LinearLayout android:layout_marginLeft="15dip"   android:layout_marginRight="15dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:background="#FFFFFF"
        android:orientation="horizontal" >
        
        <ImageView  android:layout_marginTop="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/ico03" />
         <TextView       
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:layout_marginTop="5dip"
            android:gravity="center" android:layout_marginLeft="5dip"
            android:text="客户资料" android:textColor="#FF2D2D"
            android:textSize="20sp" />
     
     </LinearLayout>
     
    <LinearLayout android:layout_marginLeft="15dip"   android:layout_marginRight="15dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:background="@drawable/email_content_title_bg"
        android:orientation="horizontal" >

        <TextView android:layout_marginTop="5dip"
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:textColor="#000000" android:text="序号"
            android:textSize="20sp" />

        <TextView android:layout_marginTop="5dip"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dip"
            android:textColor="#000000" android:text="姓名"
            android:textSize="20sp" />

        <TextView android:layout_marginTop="5dip"
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dip" android:text="性别"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView android:layout_marginTop="5dip"
            android:id="@+id/sr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:text="年收入"
            android:layout_marginLeft="85dip"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView android:layout_marginTop="5dip"
            android:id="@+id/pj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dip" android:text="评级"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView android:layout_marginTop="5dip"
            android:id="@+id/cid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="身份证号码"
            android:layout_marginLeft="125dip"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView android:layout_marginTop="5dip"
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="电话"
            android:layout_marginLeft="220dip"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
  <!-- <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal" > -->
    <ListView   android:layout_marginLeft="15dip"   android:layout_marginRight="15dip" 
        android:id="@+id/list2"  android:background="#FFFFFF"
        android:layout_width="wrap_content"  android:divider="#C8C8C8" android:dividerHeight="1dip"   
        android:layout_height="wrap_content" >
    </ListView>
 <!--</LinearLayout> -->
</LinearLayout>