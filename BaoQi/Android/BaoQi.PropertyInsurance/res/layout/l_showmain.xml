<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <!-- 布局2 -->
	<include layout="@layout/head_title_layout"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/body_bg" >

        <!-- 按钮区域 -->

        <GridView
            android:id="@+id/gridview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnWidth="154dip"
            android:gravity="center"
            android:horizontalSpacing="40dip"
            android:numColumns="auto_fit"
            android:paddingLeft="65dip"
            android:paddingRight="65dip"
            android:stretchMode="columnWidth"
            android:listSelector="@drawable/select"
            android:verticalSpacing="25dip" >
        </GridView>
        
        
        <LinearLayout 
            android:paddingLeft="65dip"
            android:paddingRight="65dip"
            android:paddingBottom="10dip"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/news_bg"
                >
                <TextView android:text="新闻公告"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dip"
                    android:paddingLeft="20dip"
                    android:textSize="20sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

                <ListView
                    android:paddingLeft="20dip"
                    android:layout_marginTop="20dip"
                    android:id="@+id/listview"
                    android:cacheColorHint="#00000000"
        			android:drawSelectorOnTop="false"
        			android:listSelector="@drawable/select"
                    android:layout_width="373dip"
                    android:layout_height="100dip" >
                </ListView>
                
            </LinearLayout>
            
            <LinearLayout android:orientation="vertical"
                android:background="@drawable/yz_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                >
                <TextView android:text="我的任务"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dip"
                    android:paddingLeft="20dip"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                
                <ListView
                    android:id="@+id/listview2"
                    android:layout_width="fill_parent"
                    android:layout_height="100dip"
                    android:layout_marginTop="20dip"
                    android:cacheColorHint="#00000000"
                    android:drawSelectorOnTop="false"
                    android:listSelector="@drawable/select"
                    android:paddingLeft="20dip" >

                </ListView>
                
                
            </LinearLayout>
            
            <LinearLayout android:orientation="vertical"
                android:layout_marginLeft="20dip"
                android:background="@drawable/rw_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView android:text="绩效看板"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dip"
                    android:paddingLeft="20dip"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                
                <LinearLayout
                    android:paddingLeft="20dip"
                    android:layout_marginTop="20dip"
                    android:layout_width="373dip"
                    android:orientation="vertical"
                    android:layout_height="100dip" >
                    <LinearLayout android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView android:text="你本月的佣金收入为"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                        <TextView android:text="50000元"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                        <TextView android:text="，在团队中排名第"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                        <TextView android:text="5"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView android:text="本月团佣金收入前三名为："
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <TextView android:text="张国立 100000元；洪小刚 88888元；章子怡 66666"
                        android:layout_width="wrap_content"
                        android:textColor="@color/red"
                        android:layout_height="wrap_content"/>
                    <TextView android:text="今日团队成交订单："
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView android:text="章子怡 2单；洪小刚 4单；范冰冰 3单"
                        android:layout_width="wrap_content"
                        android:textColor="@color/red"
                        android:layout_height="wrap_content"/>
                    
                </LinearLayout>
                
            </LinearLayout>
        </LinearLayout>
        
        
    </RelativeLayout>

</LinearLayout>