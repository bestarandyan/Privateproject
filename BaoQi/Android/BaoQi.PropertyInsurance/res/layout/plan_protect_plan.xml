<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" 
    >
    <LinearLayout android:layout_width="wrap_content"
        android:id="@+id/lin1"
        android:layout_height="wrap_content">
        <TableLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TableRow>
                <TextView android:text="请输入/选择查询条件："
                    android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="right"/>
                <TextView android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"/>
                 <TextView android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"/>
                  <TextView android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"/>
                </TableRow>
              <TableRow>
           
                <TextView android:text="请计划书名称："
                    android:layout_gravity="center|right"
                    android:textColor="@color/black"
                     android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
                <EditText android:text=""
                    android:singleLine="true"
                    android:id="@+id/name_jihuashu"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                   />
               
                
                <TextView android:text="保户姓名："
                     android:textColor="@color/black"
                     android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_gravity="center|right"/>
                <EditText android:text=""
                    android:id="@+id/name_baofu"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    />
         </TableRow>
               <TableRow >
                <TextView android:text="制作日期："
                     android:textColor="@color/black"
                     android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_gravity="center|right"/>
                <Button android:text="2012-03-03"
                    android:id="@+id/time_zhizuo"
                    android:layout_width="160dp"
                    android:background="@drawable/btn01"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                   />
               
                <TextView android:text="至:"
                    
                     android:textColor="@color/black"
                     android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_gravity="center|right"/>
                <Button android:text="2012-04-01"
                    android:layout_width="160dp"
                    android:id="@+id/time_jiezhi"
                    android:background="@drawable/btn01"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <LinearLayout android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/lin2"
        android:layout_below="@id/lin1"
        android:layout_marginBottom="50px"
        >
        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button android:background="@drawable/book_tag"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="结果列表"
                android:layout_height="wrap_content"/>
            <Button android:background="@drawable/btn02"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:text="查询"
                android:id="@+id/query_jihua"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
           <TableLayout android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:baselineAligned="true"
              >  
               <TableRow android:layout_width="fill_parent"
                   android:background="#B0E0E6"
                   android:layout_margin="2dip"
                   android:layout_height="80dip">
                    <TextView android:text="选择"
                     android:textColor="@color/black"
                     
                    
                    android:layout_width="50px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                    <TextView android:text="计划书名称"
                     android:textColor="@color/black"
                      
                     
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                    <TextView android:text="制作日期"
                     android:textColor="@color/black"
                      
                     
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                    <TextView android:text="投保人姓名"
                     android:textColor="@color/black"
                       
                    
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                    <TextView android:text="投保人年龄"
                     android:textColor="@color/black"
                      
                    
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                    <TextView android:text="被保人姓名"
                     android:textColor="@color/black"
                      
                    
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                    <TextView android:text="被保人年龄"
                     android:textColor="@color/black"
                    
                     
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                    <TextView android:text="包含险种 "
                     android:textColor="@color/black"
                     
                     
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
               </TableRow>
                
           </TableLayout> 
            
        </LinearLayout>
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/xiamian">
             <ListView android:id="@+id/tab_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                
            </ListView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/protect_bottom"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:layout_height="wrap_content">
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fuzhi"
            android:text="复制"
            android:textColor="@color/white"
            android:textSize="20px"
            android:background="@drawable/btn01"/>
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zhuan"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:text="转为电子投保单"
            android:textColor="@color/white"
            android:textSize="20px"
            android:background="@drawable/btn01"/>
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xiugai"
            android:text="修改"
            android:textColor="@color/white"
            android:textSize="20px"
            android:background="@drawable/btn01"/>
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shanchu"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="20px"
            android:background="@drawable/btn01"/>
    </LinearLayout>
    </RelativeLayout>
    




