<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
     <!-- 选择被保险人 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"   android:layout_marginTop="5dip"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/book_tag"
                    android:gravity="center"
                    android:text="选择被保险人"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
              </LinearLayout>
                        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dip"  android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dip"
                    android:background="#B0E0E6"  android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/search_2" android:textColor="#000000"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:gravity="right"
                        android:text="被保人:"
                        android:textSize="20sp" />
                </LinearLayout>

                <EditText
                    android:layout_width="200dip"  android:layout_marginLeft="5dip"  android:layout_marginTop="5dip" 
                    android:layout_height="wrap_content"
                    android:text="李国华" />
                                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="1dip"
                    android:background="#B0E0E6"  android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/search_2" android:textColor="#000000"
                        android:layout_width="150dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:gravity="right"
                        android:text="险种类型:"
                        android:textSize="20sp" />
                </LinearLayout>

                <Spinner  android:id="@+id/s1"
                    android:layout_width="150dip"  android:layout_marginLeft="5dip"  android:layout_marginTop="5dip" 
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
                
   
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dip" android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="1dip"
                    android:background="#B0E0E6"  android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/search_2" android:textColor="#000000"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:gravity="right"
                        android:text="收益数据类型:"
                        android:textSize="20sp" />
                </LinearLayout>

               <RadioGroup android:id="@+id/rg"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                		<RadioButton 
                	    android:id="@+id/radiobtn1"
                	    android:text="收益表"
                	    android:textColor="@color/black"
                	    android:layout_marginRight="50dip"
                	    android:textSize="20dip"
                	    android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"/>
                		<RadioButton 
                	    android:id="@+id/radiobtn2"
                	    android:text="一般收益文档"
                	    android:textColor="@color/black"
                	    android:textSize="20dip"
                	    android:layout_marginRight="50dip"
                	    android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"/>
                		<RadioButton 
                	    android:id="@+id/radiobtn3"
                	    android:text="综合收益文档"
                	    android:textColor="@color/black"
                	    android:textSize="20dip"
                	    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                
            </RadioGroup>
       
            </LinearLayout>
  
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="1dip"
                    android:background="#B0E0E6"  android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                       android:layout_marginLeft="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="选择"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                       android:layout_marginLeft="30dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="保单年度"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                       android:layout_marginLeft="30dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="年末年龄"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="性别"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="年初保费"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="累计保费"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                       android:layout_marginLeft="30dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="医疗保险金"
                        android:textSize="20sp" />             
                </LinearLayout>
                <ListView android:id="@+id/listview"  android:layout_width="fill_parent"
                        android:layout_height="wrap_content"></ListView>
              
                      <LinearLayout
                android:layout_marginTop="30dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:layout_marginBottom="10dip"
                android:orientation="horizontal" >
             <Button
                	android:id="@+id/submit"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提交"
                    android:background="@drawable/btn01"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            <Button
                	android:id="@+id/back"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回主界面"
                    android:background="@drawable/btn01"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
             
            </LinearLayout>
                
                

</LinearLayout>