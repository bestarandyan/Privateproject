<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/body_bg" 
    android:orientation="vertical" >

    <include layout="@layout/head_title_layout" />
    <!-- title 首页条目 -->

    <LinearLayout  android:layout_marginLeft="15dip"   android:layout_marginRight="15dip"   android:layout_marginTop="5dip" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/map" />

        <TextView
            android:id="@+id/top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="首页"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" > 保单信息查询"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout  android:layout_marginLeft="15dip"   android:layout_marginRight="15dip" 
        android:layout_width="fill_parent"
        android:layout_height="45dip"
         android:layout_marginTop="10dip"
        android:background="@drawable/guobg1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/search_1"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"  android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01"
            android:gravity="center"
            android:text="保单查询"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/search_2"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"  android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01"
            android:gravity="center"
            android:text="新契约状态查询"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/search_3"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"   android:layout_marginTop="7dip"
            android:background="@drawable/single_tag01"
            android:gravity="center"
            android:text="理赔状态查询"
            android:textSize="18sp" /> 
    </LinearLayout>

    <LinearLayout   android:layout_marginLeft="15dip"   android:layout_marginRight="15dip"  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
         android:background="#FFFFFF"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:background="@drawable/search_tu"
            android:gravity="center" />

        <TextView
            android:id="@+id/search_23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:gravity="center"
            android:text="保单查询结果"
            android:textColor="#FF0000"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="500dip" android:visibility="gone"
            android:background="@drawable/btn02"
            android:text="到处Excel" />

        <Button
            android:layout_width="wrap_content" android:visibility="gone"
            android:layout_height="wrap_content"
            android:background="@drawable/btn02"
            android:text="全屏显示" />
    </LinearLayout>

    <LinearLayout   android:layout_marginLeft="15dip"   android:layout_marginRight="15dip" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
   android:background="#DDDDFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/search_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:gravity="center" android:textColor="#000000"
            android:text="保单号"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/search_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dip"
            android:gravity="center" android:textColor="#000000"
            android:text="投保人"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/search_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dip"
            android:gravity="center"
            android:text="被保人" android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/search_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dip"
            android:gravity="center" android:textColor="#000000"
            android:text="保单状态"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/search_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginLeft="95dip"
            android:gravity="center"
            android:text="交费时间" android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/search_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="95dip"
            android:gravity="center" android:textColor="#000000"
            android:text="保费(元)"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/search_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="95dip"
            android:gravity="center" android:textColor="#000000"
            android:text="生效时期"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/search_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dip"
            android:gravity="center"
            android:text="实收费" android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <ListView  android:layout_marginLeft="15dip"   android:layout_marginRight="15dip" 
        android:id="@+id/list1"
        android:layout_width="fill_parent" android:divider="#C8C8C8" android:dividerHeight="1dip"   
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>