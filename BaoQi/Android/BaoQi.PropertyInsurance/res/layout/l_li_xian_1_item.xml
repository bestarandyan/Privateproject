                        android:id="@+id/t6"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="职业类别"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/t7"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="基本保额"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/t8"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="交费金额"
                        android:textSize="20sp" />
