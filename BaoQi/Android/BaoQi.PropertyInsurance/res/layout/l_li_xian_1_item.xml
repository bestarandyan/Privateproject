                        android:id="@+id/t18"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="关联标记"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/t19"
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="主险险种编码"
                        android:textSize="20sp" />
                </LinearLayout>

</LinearLayout>