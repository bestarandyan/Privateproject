                        android:id="@+id/t15"
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="起领期间单位"
                        android:textSize="20sp" />
