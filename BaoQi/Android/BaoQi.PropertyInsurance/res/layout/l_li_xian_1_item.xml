                        android:id="@+id/t17"
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="主附险标记"
                        android:textSize="20sp" />
