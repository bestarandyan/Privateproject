<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/head_title_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/body_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/h_backHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/map" />

                <Button
                    android:id="@+id/h_backhomebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="7dip"
                    android:background="@drawable/leftbuttonbg"
                    android:text="首页"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="7dip"
                    android:text=">"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/query_hospitalBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="7dip"
                    android:background="@drawable/leftbuttonbg"
                    android:text="卡式保单"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/relative1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="30dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bj_tag_bg"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/tab1"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bj_tag2"
                    android:text="1     填写购买信息"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dip"
                    android:src="@drawable/bj_ico" />

                <Button
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:id="@+id/tab2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/leftbuttonbg"
                    android:text="2     支付保费"
                    android:textColor="@color/gray"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/bj_ico" />

                <Button
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:id="@+id/tab3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/leftbuttonbg"
                    android:text="3     卡片激活"
                    android:textColor="@color/gray"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/bj_ico" />

                <Button
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:id="@+id/tab4"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/leftbuttonbg"
                    android:text="4     填写被保险人资料"
                    android:textColor="@color/gray"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:id="@+id/tab5"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/leftbuttonbg"
                    android:text="5     保单生效"
                    android:textColor="@color/gray"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/part2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <ScrollView
                android:id="@+id/part2_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="已是平安网站会员？请"
                            android:textColor="#000000"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="登录"
                            android:textColor="@color/red"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="，可带入个人信息，购买更方便快捷！"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_yiwai"
                        android:orientation="horizontal"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_centerVertical="true"
                            android:background="#EBFAFF"
                            android:gravity="right|center_vertical"
                            android:text="购买信息"
                            android:textColor="@color/red"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/border_car"
                        android:orientation="horizontal"
                        android:paddingRight="60dp" >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="fill_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="20dp"
                            android:text="卡名称"
                            android:textColor="#000000"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="400dip"
                            android:layout_height="fill_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/text1"
                            android:gravity="center_vertical"
                            android:text="平安全国紧急医疗救援保险卡E款 "
                            android:textColor="@color/red"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/edit1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text="查看保障范围、投保规则"
                            android:textColor="@color/red"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/border_car"
                        android:orientation="horizontal"
                        android:paddingRight="60dp" >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="fill_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="20dp"
                            android:text="购买张数"
                            android:textColor="#000000"
                            android:textSize="20dp" />

                        <Spinner
                            android:id="@+id/sp1"
                            android:layout_width="200dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/border_car"
                        android:orientation="horizontal"
                        android:paddingRight="60dp" >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="fill_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="20dp"
                            android:text="金额"
                            android:textColor="#000000"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="88 "
                            android:textColor="@color/red"
                            android:textSize="24dp" />

                        <TextView
                            android:id="@+id/TextView05"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text="元（88元/张） 市场参考价："
                            android:textColor="#000000"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="100 "
                            android:textColor="@color/red"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/TextView05"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text="元"
                            android:textColor="#000000"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/border_yiwai"
                        android:orientation="horizontal"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/TextView06"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_centerVertical="true"
                            android:background="#EBFAFF"
                            android:gravity="right|center_vertical"
                            android:text="购买人信息"
                            android:textColor="@color/red"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/TextView06"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_centerVertical="true"
                            android:background="#EBFAFF"
                            android:gravity="right|center_vertical"
                            android:text="（注：被保险人信息将会在支付成功后的激活流程中填写）"
                            android:textColor="#000000"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/border_car"
                        android:orientation="horizontal"
                        android:paddingRight="60dp" >

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="fill_parent"
                            android:gravity="right|center_vertical"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="20dp"
                            android:text="姓名"
                            android:textColor="#000000"
                            android:textSize="20dp" />

                        <EditText
                            android:layout_width="200dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/border_car"
                        android:orientation="horizontal"
                        android:paddingRight="60dp" >

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="fill_parent"
                            android:gravity="right|center_vertical"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="20dp"
                            android:text="称谓"
                            android:textColor="#000000"
                            android:textSize="20dp" />

                        <RadioGroup
                            android:id="@+id/rg1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="先生"
                                android:textColor="#000000" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:text="女士"
                                android:textColor="#000000" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/border_car"
                        android:orientation="horizontal"
                        android:paddingRight="60dp" >

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="fill_parent"
                            android:gravity="right|center_vertical"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="20dp"
                            android:text="手机"
                            android:textColor="#000000"
                            android:textSize="20dp" />

                        <EditText
                            android:layout_width="200dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/border_car"
                        android:orientation="horizontal"
                        android:paddingRight="60dp" >

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="fill_parent"
                            android:gravity="right|center_vertical"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="20dp"
                            android:text="E-mail"
                            android:textColor="#000000"
                            android:textSize="20dp" />

                        <EditText
                            android:layout_width="200dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.2dip"
                        android:layout_margin="10dip"
                        android:background="#000000" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="20dip"
                        android:text="本人确认以上述各项内容填写无误。"
                        android:textColor="#000000"
                        android:textSize="16dip" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="5dip"
                        android:text="本人已阅读并理解平安全国紧急医疗救援保险卡E款投保规则，并特别就规则中有关拒保职业、自助保险卡不接受退货、每位被保险人限激活2张的内容阅读并理解。本人特此同意接受投保规则全部内容。"
                        android:textColor="#000000"
                        android:textSize="16dip" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="5dip"
                        android:text="本人同意提供给平安集团（指中国平安保险（集团）股份有限公司及其直接或间接控股的公司）的信息，及本人享受平安集团金融服务产生的信息（包括本单证签署之前提供和产生的），可用于平安集团及因服务必要而委托的第三方为本人提供服务及推荐产品，法律禁止的除外。平安集团及其委托的第三方对上述信息负有保密义务。本条款自本单证签署时生效，具有独立法律效力，不受合同成立与否及效力状态变化的影响。"
                        android:textColor="#000000"
                        android:textSize="16dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="5dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="20dp"
                            android:text="对以上声明"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <RadioGroup
                            android:id="@+id/rg1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我同意"
                                android:textColor="#000000" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:text="我不同意"
                                android:textColor="#000000" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dip"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/guo_nextbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:background="@drawable/bj_tag2"
                            android:gravity="center"
                            android:text="下一步"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>