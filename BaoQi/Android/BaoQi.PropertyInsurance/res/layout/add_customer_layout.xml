<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/head_title_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/map" />

        <TextView
            android:id="@+id/top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="首页"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" > "
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作日历"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" > "
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高级查询"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/guobg1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:src="@drawable/search_tu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_marginLeft="5dip"
            android:gravity="center_vertical"
            android:text="新增客户"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="200dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dip"
                android:background="#B0E0E6"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新增客户:"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:layout_width="400dip"
                android:layout_height="wrap_content" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="200dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dip"
                android:background="#B0E0E6"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属机构:"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:layout_width="400dip"
                android:layout_height="wrap_content" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="200dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dip"
                android:background="#B0E0E6"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优先级别:"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <Spinner
                android:id="@+id/s1"
                android:layout_width="400dip"
                android:layout_height="wrap_content"
                android:prompt="@string/choice" >
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="200dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dip"
                android:background="#B0E0E6"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始日期:"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/s1"
                android:layout_width="400dip"
                android:layout_height="wrap_content"
                android:text="2012-03-21" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="200dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dip"
                android:background="#B0E0E6"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束日期:"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/s1"
                android:layout_width="400dip"
                android:layout_height="wrap_content"
                android:text="2012-03-21" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="200dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dip"
                android:background="#B0E0E6"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动主题:"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <Spinner
                android:id="@+id/s2"
                android:layout_width="400dip"
                android:layout_height="wrap_content"
                android:prompt="@string/choice" >
            </Spinner>
        </LinearLayout>

        <LinearLayout  android:layout_marginLeft="15dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="200dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dip"
                android:background="#B0E0E6"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内容:"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/s1"
                android:layout_width="400dip"
                android:layout_height="200dip"
                android:text="" >
            </EditText>
        </LinearLayout>

        <TextView  android:layout_marginLeft="230dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(最多500字)"
            android:textColor="#EA0000"
            android:textSize="20sp" />
         <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/save"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:background="@drawable/btn04"
            android:text="保存"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:background="@drawable/btn04"
            android:text="清空"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
    </LinearLayout>


</LinearLayout>