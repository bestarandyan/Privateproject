<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:id="@+id/you2"
    android:orientation="vertical" >
    <LinearLayout 
                 	android:layout_width="fill_parent"
                 	android:layout_height="wrap_content"
                 	android:orientation="horizontal"
                 	android:id="@+id/right" 	
                 	android:layout_marginTop="10dp"
                 	android:layout_marginLeft="10dp"
                 	>
						        <Button android:id="@+id/liyi2_b1"
						            android:layout_height="wrap_content"
						            android:layout_width="150dip"
						            android:background="@drawable/single_tag01" android:gravity="center_vertical|center"
						            android:textColor="#FFFFFF" android:textSize="20sp"
						            android:text="设计险种"/>
						        <Button
						            android:id="@+id/liyi2_b2"
						            android:layout_width="150dip" android:textSize="20sp"  android:gravity="center_vertical|center"
						            android:textColor="#000000"
						            android:layout_marginLeft="5dp" 
						            android:background="@drawable/single_tag01_on"  
						            android:text="利益演示"
						            android:layout_height="wrap_content"/>

						       

                 	</LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <!-- 右边板块 -->

        <LinearLayout
            android:layout_marginLeft="10dip"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content" >
            
            
            

            <!-- 选择被保险人 -->

            <LinearLayout
                android:layout_marginTop="10dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/book_tag"
                    android:gravity="center"
                    android:text="选择被保险人"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dip"
                    android:background="@color/green" />
                
                <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="1dip"
                    android:background="#B0E0E6"  android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="right" android:textColor="#000000"
                        android:text="险种类型"
                        android:textSize="20sp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/liyi2s1"
                    android:layout_width="500dip"  
                    android:layout_marginLeft="5dip"  
                    android:layout_marginTop="5dip" 
                    android:layout_height="wrap_content"
                    android:text="" />
                <TextView
         
                        android:id="@+id/search_2"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical|left"
                        android:layout_height="fill_parent"
                       android:layout_marginLeft="15dip"
                        android:textColor="#000000"
                        android:text="请选择一种险种类别"
                        android:textSize="20sp" />
            </LinearLayout>

                <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="1dip"
                    android:background="#B0E0E6"  android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="right" android:textColor="#000000"
                        android:text="收益数据类型"
                        android:textSize="20sp" />
                </LinearLayout>

                <RadioGroup android:id="@+id/rg"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                		<RadioButton 
                	    android:id="@+id/radiobtn1"
                	    android:text="收益表"
                	    android:textColor="@color/black"
                	    android:layout_marginRight="50dip"
                	    android:textSize="20dip"
                	    android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"/>
                		<RadioButton 
                	    android:id="@+id/radiobtn2"
                	    android:text="一般收益文档"
                	    android:textColor="@color/black"
                	    android:textSize="20dip"
                	    android:layout_marginRight="50dip"
                	    android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"/>
                		<RadioButton 
                	    android:id="@+id/radiobtn3"
                	    android:text="综合收益文档"
                	    android:textColor="@color/black"
                	    android:textSize="20dip"
                	    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                
            </RadioGroup>
            </LinearLayout>

            </LinearLayout>

            <!-- 选择险种 -->



            <!-- 险种信息设置 -->

            <!-- 已选险种 -->
            <LinearLayout
                android:layout_marginTop="10dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dip"
                    android:background="@color/green" />

                <HorizontalScrollView android:layout_width="wrap_content"
                    android:fillViewport="true"
                    android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                    android:background="#B0E0E6"  android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="保单年度"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="年末年龄"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="年初保费"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="累计保费"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="出生年月"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="180dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="重大疾病保险金"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="残疾保险金"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="年度最高身故保障"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/search_2"
                        android:layout_width="300dip"
                        android:layout_height="wrap_content"
                       android:layout_marginRight="15dip"
                        android:gravity="center" android:textColor="#000000"
                        android:text="退保金（现金价值）（年末）"
                        android:textSize="20sp" />
                </LinearLayout>
                
                    <ListView
                        android:id="@+id/listview2"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:gravity="center"
                    android:orientation="horizontal" >
                </ListView>
                </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>