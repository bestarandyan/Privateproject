<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#ffffff"
              >
  <RelativeLayout android:layout_width="fill_parent"
      android:layout_height="60dp"
      android:background="@drawable/qf_top_bg"
      >
      <ImageButton android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/qf_btn1"
          android:layout_centerVertical="true"
          android:id="@+id/intro_topLeftBtn"
          android:layout_margin="10dp"
          />
      <View android:layout_width="1dp"
          android:layout_height="fill_parent"
          android:background="@drawable/qf_top_line"
          android:layout_toRightOf="@id/intro_topLeftBtn"
          android:layout_marginBottom="2dp"
          />
      <ImageView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/qf_home_logo"
          android:layout_centerInParent="true"
          />
      <ImageButton android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/qf_btn2"
          android:layout_centerVertical="true"
          android:id="@+id/intro_topRightBtn"
          android:layout_margin="10dp"
          android:layout_alignParentRight="true"
          />
      <View android:layout_width="1dp"
          android:layout_height="fill_parent"
          android:background="@drawable/qf_top_line"
          android:layout_toLeftOf="@id/intro_topRightBtn"
          android:layout_marginBottom="2dp"
          />
  </RelativeLayout>
  <com.qingfengweb.util.ScrollViewExtend android:layout_width="fill_parent"
      android:scrollbars="none"
      android:fadingEdge="none"
      android:layout_marginTop="-3dp"
      android:layout_height="fill_parent">
  <LinearLayout android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      >
  <RelativeLayout android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="-3dp"
      >
	  <android.support.v4.view.ViewPager android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:id="@+id/MainImagePager"
	      >
	  </android.support.v4.view.ViewPager>
	  <LinearLayout android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:id="@+id/pointLayout"
	      android:layout_alignBottom="@id/MainImagePager"
	      android:layout_marginBottom="5dp"
	      android:layout_centerHorizontal="true"
	      android:gravity="right"
	      android:orientation="horizontal"
	      >
	  </LinearLayout>
  </RelativeLayout>
  <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="公司简介"
      android:textColor="#000000"
      android:textSize="22dp"
      android:layout_margin="10dp"
      />

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      >

     <EditText
          android:id="@+id/introTv"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:text="@string/company_intro"
          android:textColor="#000000"
          android:lineSpacingExtra="3dp"
          android:focusable="false"
          android:background="@null"
          android:gravity="right|left"
          android:focusableInTouchMode="false"
          android:textSize="16dp" />
 		<!--  <com.qingfengweb.util.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
          		android:layout_marginRight="10dp"
                android:id="@+id/introTv"
                android:text="@string/company_intro"
                android:textColor="#000000"
                android:lineSpacingExtra="3dp"
                android:textSize="16dp" /> -->
     <!--  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@id/introTv"
          android:layout_alignRight="@id/introTv"
          android:layout_alignParentRight="true"
          android:layout_marginRight="10dp"
          android:text="查看详情>>"
          android:textColor="#ff0000"
          android:textSize="16dp" /> -->
  </RelativeLayout>
  <View android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:background="@drawable/qf_line"
      android:layout_marginTop="20dp"
      />
  <LinearLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="#F6F6F6"
      >
       <LinearLayout android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:orientation="vertical"
	      android:background="#F6F6F6"
	      android:layout_weight="1"
	      android:layout_marginTop="10dp"
	      >
      <LinearLayout android:layout_width="match_parent"
	    android:layout_height="90dp"
	    android:orientation="vertical"
	    android:gravity="center_horizontal"
	    android:background="#F6F6F6"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:id="@+id/layoutItem1"
	    >
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/qf_home_ios"
	        />
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="iOS"
	        android:textColor="@color/intro_tab_text_color"
	        android:textSize="14sp"
	        android:layout_marginTop="5dp"
	        />
	</LinearLayout>
	<View android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:background="@drawable/qf_line"
      />
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:background="#F6F6F6"
	    android:paddingTop="5dp"
	    android:layout_weight="1"
	    android:paddingBottom="5dp"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:id="@+id/layoutItem5"
	    >
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/qf_home_web"
	        />
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Web"
	        android:textColor="@color/intro_tab_text_color"
	        android:textSize="14sp"
	        android:layout_marginTop="5dp"
	        />
	</LinearLayout>
	</LinearLayout>
	<View android:layout_width="0.5dp"
      android:layout_height="fill_parent"
      android:background="#dddddd"
      />
	 <LinearLayout android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:orientation="vertical"
	      android:background="#F6F6F6"
	      android:layout_weight="1"
	      android:layout_marginTop="10dp"
	      >
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="90dp"
	    android:orientation="vertical"
	    android:gravity="center_horizontal"
	    android:background="#F6F6F6"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:id="@+id/layoutItem2"
	    >
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/qf_home_android"
	        />
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Android"
	        android:textColor="@color/intro_tab_text_color"
	        android:textSize="14sp"
	        android:layout_marginTop="5dp"
	        />
	</LinearLayout>
	<View android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:background="@drawable/qf_line"
      />
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:background="#F6F6F6"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="10dp"
	    android:paddingRight="8dp"
	    android:id="@+id/layoutItem6"
	    >
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/qf_home_tgyh"
	        />
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="推广和优化"
	        android:textColor="@color/intro_tab_text_color"
	        android:textSize="14sp"
	        android:layout_marginTop="5dp"
	        />
	</LinearLayout>
	</LinearLayout>
	<View android:layout_width="0.5dp"
      android:layout_height="fill_parent"
      android:background="#dddddd"
      />
	 <LinearLayout android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:orientation="vertical"
	      android:background="#F6F6F6"
	      android:layout_weight="1"
	      android:layout_marginTop="10dp"
	      >
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="90dp"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:background="#F6F6F6"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:id="@+id/layoutItem3"
	    >
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/qf_home_windows"
	        />
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Windows Phone"
	        android:textColor="@color/intro_tab_text_color"
	        android:textSize="14sp"
	        android:layout_marginTop="5dp"
	        />
	</LinearLayout>
	<View android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:background="@drawable/qf_line"
      />
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:background="#F6F6F6"
	    android:paddingTop="5dp"
	    android:layout_weight="1"
	    android:paddingBottom="5dp"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:id="@+id/layoutItem7"
	    >
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/qf_home_tjxq"
	        />
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="提交需求"
	        android:textColor="@color/intro_tab_text_color"
	        android:textSize="14sp"
	        android:layout_marginTop="5dp"
	        />
	</LinearLayout>
	</LinearLayout>
	<View android:layout_width="0.5dp"
      android:layout_height="fill_parent"
      android:background="#dddddd"
      />
	 <LinearLayout android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:orientation="vertical"
	      android:background="#F6F6F6"
	      android:layout_weight="1"
	      android:layout_marginTop="10dp"
	      >
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="90dp"
	    android:orientation="vertical"
	    android:gravity="center_horizontal"
	    android:background="#F6F6F6"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:id="@+id/layoutItem4"
	    >
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/qf_home_html5"
	        />
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="HTML5"
	        android:textColor="@color/intro_tab_text_color"
	        android:textSize="14sp"
	        android:layout_marginTop="5dp"
	        />
	</LinearLayout>
	<View android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:background="@drawable/qf_line"
      />
	</LinearLayout>
  </LinearLayout>
	<View android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:background="@drawable/qf_line"
      />
	</LinearLayout>
	</com.qingfengweb.util.ScrollViewExtend>
</LinearLayout>

























