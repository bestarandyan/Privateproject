<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#007B5C"
              android:gravity="center_vertical"
              >
         <TextView android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="2014-03-20"
             android:id="@+id/dateTextView"
             android:textColor="#ffffff"
             android:textSize="16sp"
             android:background="#023F30"
             android:padding="5dp"
             android:gravity="center"
             />     
    <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:background="#007B5C"
              android:gravity="center_vertical"
              >
	                 <TextView android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:text="030期"
	                     android:textColor="#eeeeee"
	                     android:textSize="14sp"
	                     android:id="@+id/qishu"
	                     android:layout_marginLeft="10dp"
	                     android:layout_marginTop="5dp"
	                     android:layout_marginBottom="5dp"
	                     />
	                 <RelativeLayout android:layout_width="wrap_content"
	                     android:layout_height="match_parent"
	                     android:layout_marginLeft="10dp"
	                     >
	                     <View android:layout_width="1dp"
	                         android:layout_height="match_parent"
	                         android:background="#284936"
	                         android:layout_centerInParent="true"
	                         android:id="@+id/lineView"
	                         />
	                     <ImageView android:layout_width="wrap_content"
	                         android:layout_height="wrap_content"
	                         android:src="@drawable/kaijiang_dot1"
	                         android:layout_centerInParent="true"
	                         android:id="@+id/dotImg"
	                         />
	                 </RelativeLayout>
	                 	<ImageView android:layout_width="@dimen/sz_lotteryinfo_size"
	                 	    android:layout_height="@dimen/sz_lotteryinfo_size"
	                 	    android:src="@drawable/cai_sz1"
	                 	    android:id="@+id/imgSz1"
	                 	    android:layout_marginLeft="10dp"
	                 	    />
	                 	<ImageView android:layout_width="@dimen/sz_lotteryinfo_size"
	                 	    android:layout_height="@dimen/sz_lotteryinfo_size"
	                 	    android:src="@drawable/cai_sz2"
	                 	    android:id="@+id/imgSz2"
	                 	    android:layout_marginLeft="4dp"
	                 	    />
	                 	<ImageView android:layout_width="@dimen/sz_lotteryinfo_size"
	                 	    android:layout_height="@dimen/sz_lotteryinfo_size"
	                 	    android:src="@drawable/cai_sz4"
	                 	    android:id="@+id/imgSz3"
	                 	    android:layout_marginLeft="4dp"
	                 	    />
	                 	<LinearLayout android:layout_width="match_parent"
	                 	    android:layout_height="wrap_content"
	                 	    android:orientation="horizontal"
	                 	    >
	                     <LinearLayout android:layout_width="match_parent"
	                 	    android:layout_height="wrap_content"
	                 	    android:orientation="horizontal"
	                 	    android:layout_weight="1"
	                 	    android:gravity="center"
	                 	    >
			                 	<TextView android:layout_width="wrap_content"
					                     android:layout_height="wrap_content"
					                     android:text="1"
					                     android:textColor="#eeeeee"
					                     android:textSize="14sp"
					                     android:id="@+id/num1"
					                     android:gravity="right"
					                     android:layout_marginLeft="3dp"
					                     />  
					             <TextView android:layout_width="wrap_content"
					                     android:layout_height="wrap_content"
					                     android:text="2"
					                     android:textColor="#eeeeee"
					                     android:textSize="14sp"
					                     android:id="@+id/num2"
					                     android:gravity="right"
					                     android:layout_marginLeft="6dp"
					                     />  
					             <TextView android:layout_width="wrap_content"
					                     android:layout_height="wrap_content"
					                     android:text="4"
					                     android:textColor="#eeeeee"
					                     android:textSize="14sp"
					                     android:id="@+id/num3"
					                     android:gravity="right"
					                     android:layout_marginLeft="6dp"
					                     />  
			                   </LinearLayout>
			              <LinearLayout android:layout_width="match_parent"
	                 	    android:layout_height="wrap_content"
	                 	    android:orientation="horizontal"
	                 	    android:layout_weight="1"
	                 	    android:gravity="center_vertical|left"
	                 	    >
			                  <TextView android:layout_width="wrap_content"
			                     android:layout_height="wrap_content"
			                     android:text="和值"
			                     android:textColor="#eeeeee"
			                     android:textSize="14sp"
			                     android:gravity="right"
			                     android:layout_marginLeft="3dp"
			                     />  
			                  <TextView android:layout_width="wrap_content"
			                     android:layout_height="wrap_content"
			                     android:text="7"
			                     android:textColor="#eeeeee"
			                     android:textSize="14sp"
			                     android:id="@+id/hezhiTv"
			                     android:layout_marginLeft="5dp"
			                     />  
			                     </LinearLayout>
			            <LinearLayout android:layout_width="match_parent"
	                 	    android:layout_height="wrap_content"
	                 	    android:orientation="horizontal"
	                 	    android:layout_weight="1"
	                 	    android:gravity="center"
	                 	    >
					            <TextView android:text="单"
					                android:layout_width="wrap_content"
					                android:layout_height="wrap_content"
					                android:textColor="#eeeeee"
					                android:textSize="14sp"
					                android:layout_marginLeft="6dp"
					                android:id="@+id/type1"
					                android:gravity="center"
					                />
					            <TextView android:text="小"
					                android:layout_width="wrap_content"
					                android:layout_height="wrap_content"
					                android:textColor="#eeeeee"
					                android:textSize="14sp"
					                android:layout_marginLeft="10dp"
					                android:id="@+id/type2"
					                android:gravity="center"
					                />
					     </LinearLayout>
			            </LinearLayout>
			            </LinearLayout>
</LinearLayout>