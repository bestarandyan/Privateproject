<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#D8D8D8"
               android:layout_marginTop="1dp"
              >
      <LinearLayout android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="8dp"
          android:background="#EBEBEB"
          android:gravity="center_horizontal"
          android:id="@+id/topLayout"
          android:layout_marginTop="1dp"
          >
          <ImageView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/cai_order_ico2"
              />
          <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="大奖别错过，点击完善身份信息！"
              android:textColor="#DC7902"
              android:textSize="14sp"
              android:layout_marginLeft="10dp"
              />
      </LinearLayout>
      <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#D8D8D8"
          android:id="@+id/lineView"
          />
      <LinearLayout android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="5dp"
          android:background="#F5F5F5"
          android:gravity="center_vertical"
          >
          <ImageView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/headImg"
              android:layout_marginLeft="15dp"
              android:src="@drawable/cai_order_photo"
              />
          <LinearLayout android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:orientation="vertical"
	          android:background="@null"
	          android:gravity="center_vertical"
	          android:layout_marginLeft="10dp"
          >
          <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="meiweis"
              android:textColor="#333333"
              android:textSize="20sp"
              android:id="@+id/userNameTv"
              />
          <LinearLayout android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:orientation="horizontal"
	          android:background="@null"
	          android:layout_marginTop="0dp"
         	 >
         	 <TextView android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="我的余额:"
	              android:textColor="#AEAEAE"
	              android:textSize="18sp"
	              />
	          <TextView android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="560.00元"
	              android:textColor="#FEAE01"
	              android:textSize="18sp"
	              android:id="@+id/myMoneyTv"
	              android:layout_marginLeft="10dp"
	              />
	          <TextView android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="[充值]"
	              android:textColor="#FEAE01"
	              android:textSize="18sp"
	              android:id="@+id/chongzhiTv"
	              android:layout_marginLeft="10dp"
	              />
          </LinearLayout>
          </LinearLayout>
      </LinearLayout>
      <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#44917D"
          />
      <LinearLayout android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:orientation="horizontal"
	          android:background="#78B8A7"
          >
          <LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@null"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:gravity="center"
              android:id="@+id/allDDLayout"
              android:layout_marginLeft="2dp"
              >
	          <TextView android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:text="全部订单"
	              android:textColor="#ffffff"
	              android:textSize="14sp"
	              android:id="@+id/allDDTV"
	              android:background="@drawable/border_ddbtn"
	              android:gravity="center"
	              />
	      </LinearLayout>
	      <LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@null"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:gravity="center"
              android:id="@+id/zhongjiangDDLayout"
              >
	          <TextView android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:text="中奖"
	              android:textColor="#103023"
	              android:textSize="14sp"
	              android:id="@+id/zhongjiangDDTV"
	              android:gravity="center"
	              />
	          </LinearLayout>
	          <LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@null"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:gravity="center"
              android:id="@+id/weizhongjiangDDLayout"
              >
	          <TextView android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:text="未中奖"
	              android:textColor="#103023"
	              android:textSize="14sp"
	              android:id="@+id/weizhongjiangDDTV"
	              android:gravity="center"
	              />
	           </LinearLayout>
	          <LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@null"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:gravity="center"
              android:id="@+id/daikaijiangDDLayout"
              >
	          <TextView android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:text="待开奖"
	              android:textColor="#103023"
	              android:textSize="14sp"
	              android:id="@+id/daikaijiangDDTV"
	              android:gravity="center"
	              />
	           </LinearLayout>
	          <LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@null"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:gravity="center"
              android:id="@+id/zhuihaoDDLayout"
              android:layout_marginRight="2dp"
              >
	          <TextView android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:text="追号订单"
	              android:textColor="#103023"
	              android:textSize="14sp"
	              android:id="@+id/zhuihaoDDTV"
	              android:gravity="center"
	              />
	          </LinearLayout>
          </LinearLayout>
          <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#44917D"
          />
          <LinearLayout android:layout_width="match_parent"
	          android:layout_height="match_parent"
	          android:orientation="vertical"
	          android:background="#D4E9E4"
         	 >
		     <com.qingfengweb.lottery.view.XListView android:layout_width="match_parent"
		         android:layout_height="match_parent"
		         android:id="@+id/listView"
		         android:divider="#B4C9C2"
		         android:dividerHeight="1px"
		         android:cacheColorHint="@null"
		         android:background="@null"
		         android:layout_marginTop="-2dp"
		         ></com.qingfengweb.lottery.view.XListView>
      	</LinearLayout>
</LinearLayout>

























