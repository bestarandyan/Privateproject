<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/beijingse"
    android:orientation="vertical"
    android:padding="@dimen/marginsizel" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ower_border"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linear_btn2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/marginsizel" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="通知提示音"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />

            <com.qingfengweb.piaoguanjia.orderSystem.view.SlipButton
                android:id="@+id/switchButton"
                android:layout_width="220px"
                android:layout_height="60px"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#e4e4e4" />

        <LinearLayout
            android:id="@+id/linear_btn3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/marginsizel" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="通知时震动"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />

            <com.qingfengweb.piaoguanjia.orderSystem.view.SlipButton
                android:id="@+id/switchButton"
                android:layout_width="220px"
                android:layout_height="60px"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_btn1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginsizel"
        android:background="@drawable/ower_border_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/marginsizel" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="清除缓存"
            android:textColor="@color/heise"
            android:textSize="@dimen/textsizeh" />

        <ImageView
            android:layout_width="@dimen/marginsizeh"
            android:layout_height="@dimen/marginsizeh"
            android:layout_weight="0"
            android:background="@null"
            android:src="@drawable/piaoguanjia_ico12" />
    </LinearLayout>

</LinearLayout>