<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xdxml_jiazai_bg"
    android:gravity="center_vertical" >

    <LinearLayout
        android:id="@+id/linear_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imagebtn_back"
            android:layout_width="@dimen/marginsizeh"
            android:layout_height="@dimen/marginsizeh"
            android:layout_margin="@dimen/marginsizeh"
            android:background="@drawable/product_top_ico1"
            android:contentDescription="@string/app_name" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/product_top_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginsizeh"
        android:text="title"
        android:textColor="#ffffffff"
        android:textSize="@dimen/textsizex"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linear_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@drawable/product_top_line" />

            <ImageView
                android:id="@+id/iv_shoucang"
                android:layout_width="@dimen/marginsizeh"
                android:layout_height="@dimen/marginsizeh"
                android:layout_margin="@dimen/marginsizeh"
                android:background="@drawable/product_top_ico4"
                android:contentDescription="@string/app_name" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@drawable/product_top_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/marginsizeh"
                android:layout_height="@dimen/marginsizeh"
                android:layout_margin="@dimen/marginsizeh"
                android:background="@drawable/product_top_ico2"
                android:contentDescription="@string/app_name" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@drawable/product_top_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/marginsizeh"
                android:layout_height="@dimen/marginsizeh"
                android:layout_margin="@dimen/marginsizeh"
                android:background="@drawable/product_top_ico3"
                android:contentDescription="@string/app_name" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>