<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/parent"
    android:background="@color/beijingse"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ower_border"
        android:orientation="vertical"
        android:padding="@dimen/marginsizem" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="订单状态"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />

            <TextView
                android:id="@+id/tv_amount1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:singleLine="true"
                android:text="已下单"
                android:textColor="@color/chensekuaijie"
                android:textSize="@dimen/textsizeh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginsizel"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="订单编号"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />

            <TextView
                android:id="@+id/tv_amount1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:singleLine="true"
                android:text="24342423524"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginsizel"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="订单总额"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />

            <TextView
                android:id="@+id/tv_amount1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:singleLine="true"
                android:text="￥210009"
                android:textColor="@color/chensekuaijie"
                android:textSize="@dimen/textsizeh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginsizel"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="支付方式"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />

            <TextView
                android:id="@+id/tv_amount1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:singleLine="true"
                android:text="账户余额支付"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginsizem"
        android:background="@drawable/ower_border"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="苏州乐园水上世界门票"
            android:padding="@dimen/marginsizem"
            android:textColor="#000000"
            android:textSize="@dimen/textsizex" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/huise" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ower_border"
            android:orientation="vertical"
            android:padding="@dimen/marginsizem" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginsizel"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="成人周末票"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/textsizeh" />

                <TextView
                    android:id="@+id/tv_amount1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:text="300"
                    android:textColor="@color/chensekuaijie"
                    android:textSize="@dimen/textsizeh" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginsizel"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="游玩日期"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/textsizeh" />

                <TextView
                    android:id="@+id/tv_amount1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:text="2013-04-21"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/textsizeh" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginsizel"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="下单日期"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/textsizeh" />

                <TextView
                    android:id="@+id/tv_amount1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:text="2013-05-15 22:12:23"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/textsizeh" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginsizem"
        android:background="@drawable/ower_border"
        android:orientation="vertical"
        android:padding="@dimen/marginsizem" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="游玩人"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />

            <TextView
                android:id="@+id/tv_amount1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:singleLine="true"
                android:text="雨果"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginsizel"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="证件号码"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />

            <TextView
                android:id="@+id/tv_amount1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:singleLine="true"
                android:text="24342423524"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginsizel"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="手机号码"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />

            <TextView
                android:id="@+id/tv_amount1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:singleLine="true"
                android:text="132323232"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>