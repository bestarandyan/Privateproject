<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:background="@color/beijingse"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xdxml_jiazai_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linear_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imagebtn_back"
                android:layout_width="@dimen/marginsizeh"
                android:layout_height="@dimen/marginsizeh"
                android:layout_margin="@dimen/marginsizeh"
                android:background="@drawable/product_top_ico1"
                android:contentDescription="@string/app_name" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@drawable/product_top_line" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginsizeh"
            android:text="修改密码"
            android:textColor="#ffffffff"
            android:textSize="@dimen/textsizex"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right"
            android:orientation="horizontal" >



            <Button
                android:id="@+id/btn_keep"
                android:background="@null"
                android:text="完成"
                android:textColor="@color/baise"
                android:textSize="@dimen/textsizeh"
                android:padding="@dimen/marginsizel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginsizel"
        android:layout_marginRight="@dimen/marginsizel"
        android:layout_marginTop="@dimen/marginsizel"
        android:background="@drawable/ower_border"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="@dimen/marginsizel" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="当前密码"
                android:textColor="@color/shenhuise"
                android:textSize="@dimen/textsizem" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="left"
                android:hint="请输入当前密码"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/shenhuise"
                android:textSize="@dimen/textsizem" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#e4e4e4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="@dimen/marginsizel" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="新密码"
                android:textColor="@color/shenhuise"
                android:textSize="@dimen/textsizem" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="left"
                android:hint="请输入新密码"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/shenhuise"
                android:textSize="@dimen/textsizem" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4" />

        <LinearLayout
            android:id="@+id/linearbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="@dimen/marginsizel" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="确认密码"
                android:textColor="@color/shenhuise"
                android:textSize="@dimen/textsizem" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="left"
                android:hint="请再次输入新密码"
                android:padding="4dp"
                android:text=""
                android:inputType="textPassword"
                android:textColor="@color/shenhuise"
                android:textSize="@dimen/textsizem" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginsizeh"
        android:layout_marginRight="@dimen/marginsizeh"
        android:layout_marginTop="@dimen/marginsizel"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/marginsizel" >

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radiobutton"
            android:checked="true"
            android:text=" 显示密码"
            android:textColor="@color/heise"
            android:textSize="@dimen/textsizem" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginsizeh"
        android:layout_marginRight="@dimen/marginsizeh"
        android:layout_marginTop="@dimen/marginsizel"
        android:text="注意：密码要填写6~20位字符，可由英文字母，数字和字符组成，不能含空格"
        android:textColor="@color/heise"
        android:textSize="@dimen/textsizes" />

</LinearLayout>