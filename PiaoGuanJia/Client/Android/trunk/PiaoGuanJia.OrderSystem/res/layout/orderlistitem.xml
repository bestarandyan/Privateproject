<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/beijingse"
    android:orientation="vertical"
    android:padding="5dp" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ower_border"
        android:orientation="vertical"
        android:padding="@dimen/marginsizem" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京欢乐谷"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />

            <TextView
                android:id="@+id/tv_amount1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right|bottom"
                android:singleLine="true"
                android:text="￥210"
                android:textColor="@color/xuehongse"
                android:textSize="@dimen/textsizeh" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginsizem"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_accounttypetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成人票"
                android:textColor="@color/shenhuise"
                android:textSize="@dimen/textsizel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginsizem"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游玩日期"
                        android:textColor="@color/shenhuise"
                        android:textSize="@dimen/textsizel" />

                    <TextView
                        android:id="@+id/tv_check01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginsizem"
                        android:singleLine="true"
                        android:text="2013-05-16"
                        android:textColor="@color/shenhuise"
                        android:textSize="@dimen/textsizel" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginsizem"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单日期"
                        android:textColor="@color/shenhuise"
                        android:textSize="@dimen/textsizel" />

                    <TextView
                        android:id="@+id/tv_check01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginsizem"
                        android:singleLine="true"
                        android:text="2013-05-16"
                        android:textColor="@color/shenhuise"
                        android:textSize="@dimen/textsizel" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginsizem"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号"
                        android:textColor="@color/shenhuise"
                        android:textSize="@dimen/textsizel" />

                    <TextView
                        android:id="@+id/tv_check01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginsizem"
                        android:singleLine="true"
                        android:text="29478293648"
                        android:textColor="@color/shenhuise"
                        android:textSize="@dimen/textsizel" />
                </LinearLayout>
    </LinearLayout>

</LinearLayout>