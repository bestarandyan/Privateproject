<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/beijingse"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_head"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@null"
                android:src="@drawable/product_photo" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="泰州华侨城云海温泉"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizeh" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/lanse"
                    android:padding="2dp"
                    android:text="5级酒店"
                    android:textColor="@color/baise"
                    android:textSize="@dimen/textsizel" />

                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@color/lv"
                    android:gravity="right"
                    android:padding="2dp"
                    android:text="特价"
                    android:textColor="@color/baise"
                    android:textSize="@dimen/textsizel" />

                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@color/fenhonggentuanyou"
                    android:gravity="right"
                    android:padding="2dp"
                    android:text="今日特价"
                    android:textColor="@color/baise"
                    android:textSize="@dimen/textsizel" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="原价:￥100"
                        android:textColor="@color/huise"
                        android:textSize="@dimen/textsizes" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:padding="2dp"
                            android:text="￥200"
                            android:textColor="@color/chengse"
                            android:textSize="@dimen/textsizel" />

                        <TextView
                            android:id="@+id/tv_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="起"
                            android:textColor="@color/heise"
                            android:textSize="@dimen/textsizes" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="bottom|left" >

                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/product_map_ico"
                    android:gravity="center_vertical"
                    android:text="上海市弗兰克世纪福克斯的jfk"
                    android:textColor="@color/huise"
                    android:textSize="@dimen/textsizel" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="4dp"
        android:background="@color/huise" />

</LinearLayout>