<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/body_bg"
    android:orientation="vertical" >
    <RelativeLayout android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:background="@drawable/top_bg"
    	>
       <Button android:layout_width="wrap_content"
    	android:layout_height="wrap_content" 
    	android:background="@drawable/fh_btn"
    	android:text="返回"
    	android:textColor="#ffffff"
    	android:textSize="18dp"
    	android:layout_centerVertical="true"
    	android:layout_marginLeft="10dp"
    	android:id="@+id/back"
    	/>
       <Button android:layout_width="wrap_content"
    	android:layout_height="wrap_content" 
    	android:background="@drawable/lj_btn"
    	android:text="连接设备"
    	android:textColor="#ffffff"
    	android:textSize="18dp"
    	android:layout_centerVertical="true"
    	android:layout_alignParentRight="true"
    	android:layout_marginRight="10dp"
    	android:id="@+id/connectlanya"
    	android:visibility="gone"
    	/>
    </RelativeLayout>
      <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="订单详情："/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/detailText"
                />
            <RelativeLayout android:orientation="horizontal"
		        android:layout_width="fill_parent"
		        android:paddingLeft="20dip"
		        android:gravity="right"
		        android:visibility="gone"
		        android:id="@+id/testLinear"
		        android:layout_height="wrap_content">
	           
	            <TextView android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#ffffff"
	                android:textSize="16dp"
	                android:id="@+id/successTime"
	                android:layout_marginRight="20dp"
	                />
	            <TextView android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#FF0000"
	                android:textSize="20dp"
	                android:text="验证成功"
	                android:layout_toRightOf="@id/successTime"
	                android:layout_marginRight="20dp"
	                />
            </RelativeLayout>
        </LinearLayout>
    <!-- 照片与信息展示项 -->
    <RelativeLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dip"
        android:paddingLeft="20dip"
        android:layout_height="wrap_content">
       
        <!-- 照片页 -->
         <LinearLayout android:orientation="vertical"
	        android:layout_width="wrap_content"
	        android:layout_marginTop="10dip"
	        android:id="@+id/image_linear"
	        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/imageView1"
            android:background="@drawable/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
         
        </LinearLayout>
        <!-- 信息页 -->
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:paddingLeft="50dip"
            android:id="@+id/info_linear"
            android:layout_toRightOf="@id/image_linear"
            android:layout_height="wrap_content">
            <!-- 信息部分1 -->
            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dip"
                android:layout_height="wrap_content">
                <TextView android:text="姓       名："
                    android:gravity="right|center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"/>
                <TextView android:text=""
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"/>
                <TextView android:id="@+id/phoneNumber"
                    android:gravity="right|center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!-- 信息部分2 -->
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_height="wrap_content">
                <TextView android:text="身份证号："
                    android:gravity="right|center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"/>
                <TextView android:text=""
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!-- 信息部分3 -->
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_height="wrap_content">
                <TextView android:text="订单编号："
                    android:gravity="right|center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"/>
                <TextView android:text=""
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!-- 信息部分4 -->
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_height="wrap_content">
                <TextView android:text="预定时间："
                    android:gravity="right|center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"/>
                <TextView android:text=""
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!-- 信息部分5 -->
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_height="wrap_content">
                <TextView android:text="门票类型："
                    android:gravity="right|center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"/>
                <TextView android:text=""
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!-- 信息部分6 -->
            <LinearLayout android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <TextView android:text="预定数量："
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="100dip"
                    android:gravity="right|center_vertical"
                    android:layout_height="wrap_content"/>
                <TextView android:text=""
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:textColor="#FFB724"
                    android:textSize="40sp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
		<LinearLayout android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_alignBottom="@+id/image_linear"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
	        <Button
	            android:id="@+id/duka"
	            android:layout_width="99dp"
	            android:layout_height="69dp"
	            android:background="@drawable/btn_style"
	            android:textSize="20dp"
	            android:textColor="#0A5F9D" />
		</LinearLayout>
    </RelativeLayout>
    <!-- 底端信息 -->
	<RelativeLayout android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:paddingLeft="5dip"
	    android:layout_marginTop="25dip"
	    android:layout_height="wrap_content"
	    android:id="@+id/inputLinear"
	    >
	    <TextView android:text="请输入身份证号码或者订单编号"
	        android:layout_marginLeft="15dip"
	        android:id="@+id/btn1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFF"
	        android:layout_centerVertical="true"
	        android:textSize="18sp"/>
	    <EditText android:background="@drawable/text"
	        android:id="@+id/ed1"
	        android:layout_marginLeft="10dip"
	        android:paddingLeft="8dip"
	        android:textSize="16sp"
	        android:layout_marginTop="4dp"
	        android:layout_alignTop="@id/btn1"
	        android:textColor="#333333"
	        android:paddingRight="20dp"
	        android:layout_toRightOf="@id/btn1"
	        android:hint="请输入订单号、手机号或身份证号码"
	        android:layout_width="360dp"
	        android:layout_height="wrap_content"/>
	    <Button
	        android:layout_marginLeft="8dip"
	        android:id="@+id/btn2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFF"
	        android:textSize="18sp"
	        android:layout_toRightOf="@id/ed1"
	        android:background="@drawable/btn1"/>
	    
	
	</RelativeLayout>
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="bottom|center_horizontal">
	  <TextView android:text="电  子  票  券  验  证  系  统"
	        android:textColor="#FFFFFF"
	        android:textSize="25dp"
	        android:id="@+id/view9"
	        android:layout_marginBottom="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	</LinearLayout>
</LinearLayout>