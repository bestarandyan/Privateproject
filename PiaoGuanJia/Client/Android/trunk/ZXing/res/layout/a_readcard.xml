<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sp_body_bg"
    android:orientation="vertical" >
    <RelativeLayout android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:background="@drawable/sp_top_bg"
    	>
       <Button android:layout_width="wrap_content"
    	android:layout_height="wrap_content" 
    	android:background="@drawable/fh_btn"
    	android:text="返回"
    	android:textColor="#ffffff"
    	android:textSize="18dp"
    	android:layout_centerVertical="true"
    	android:layout_marginLeft="10dp"
    	android:id="@+id/back"
    	/>
       <Button android:layout_width="wrap_content"
    	android:layout_height="wrap_content" 
    	android:background="@drawable/lj_btn"
    	android:text="连接设备"
    	android:textColor="#ffffff"
    	android:textSize="18dp"
    	android:layout_centerVertical="true"
    	android:layout_alignParentRight="true"
    	android:layout_marginRight="10dp"
    	android:id="@+id/connectlanya"
    	android:visibility="gone"
    	/>
    </RelativeLayout>
     <!-- 照片页 -->
         <LinearLayout android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_marginTop="10dip"
	        android:id="@+id/image_linear"
	        android:gravity="center_horizontal"
	        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/imageView1"
            android:background="@drawable/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
         
        </LinearLayout>
      <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="left"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginLeft="7dp"
                android:text="订单详情："/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFB724"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/detailText"
                />
            
        </LinearLayout>
   
       
       
         <!-- 照片与信息展示项 -->
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40dip" >

        <!-- 信息页 -->

        <LinearLayout
            android:id="@+id/info_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_linear"
            android:orientation="vertical"
             >

            <!-- 信息部分1 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="姓       名："
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
                <TextView android:id="@+id/phoneNumber"
                    android:gravity="right|center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!-- 信息部分2 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="身份证号："
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>
            <!-- 信息部分3 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="订单编号："
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>
            <!-- 信息部分4 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="预定时间："
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>
            <!-- 信息部分5 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="门票类型："
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>
            <!-- 信息部分6 -->

            <LinearLayout
                android:id="@+id/numberLinear"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="预定数量："
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text=""
                    android:textColor="#FFB724"
                    android:textSize="40sp" />
            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/info_linear"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <Button
            android:id="@+id/duka"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_alignRight="@+id/linearLayout1"
            android:layout_centerVertical="true"
            android:background="@drawable/get"
            android:textColor="#ffffff" />
        </LinearLayout>

        

    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal"
		        android:layout_width="fill_parent"
		        android:paddingLeft="20dip"
		        android:layout_marginTop="10dp"
		        android:gravity="right"
		        android:visibility="visible"
		        android:id="@+id/testLinear"
		        android:layout_height="wrap_content">
	           
	            <TextView android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#ffffff"
	                android:textSize="16dp"
	                android:text="2012"
	                android:id="@+id/successTime"
	                android:layout_marginRight="20dp"
	                />
	            <TextView android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#FF0000"
	                android:textSize="15dp"
	                android:layout_alignBottom="@id/successTime"
	                android:text="验证成功"
	                android:layout_toRightOf="@id/successTime"
	                android:layout_marginRight="10dp"
	                />
            </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

    <!-- 底端信息 -->
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/inputLinear"
	    android:orientation="horizontal"
	    android:gravity="center_horizontal"
	    >
	    <EditText android:background="@drawable/et_corner"
	        android:id="@+id/ed1"
	        android:textSize="16sp"
	        android:textColor="#333333"
	        android:hint="输入身份证或订单号或手机号"
	        android:layout_width="260dp"
	        android:layout_marginLeft="12dp"
	        android:paddingLeft="8dp"
	        android:paddingBottom="15dp"
	        android:paddingTop="15dp"
	        android:gravity="center_vertical"
	        android:singleLine="true"
	        android:layout_height="50dp"/>
	    <Button
	        android:id="@+id/btn2"
	        android:layout_width="100dp"
	        android:layout_height="60dp"
	        android:textColor="#FFFFFF"
	        android:textSize="14sp"
	        android:layout_marginLeft="10dp"
	        android:text="查询订单"
	        android:background="@drawable/btn_style"/>
	</LinearLayout>
	<TextView android:text="电  子  票  券  验  证  系  统"
	        android:textColor="#FFFFFF"
	        android:textSize="25dp"
	        android:id="@+id/view9"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="30dp"
	        android:layout_width="fill_parent"
	        android:gravity="center_horizontal"
	        android:layout_height="wrap_content"/>
	</RelativeLayout>
</LinearLayout>