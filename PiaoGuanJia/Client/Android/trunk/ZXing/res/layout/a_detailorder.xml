<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:focusableInTouchMode="false"
             android:focusable="false"
             android:layout_height="fill_parent"
             android:orientation="vertical"
             android:background="#F3F3F3"
             android:id="@+id/parent"
             >
     <RelativeLayout android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:padding="15dp"
         android:background="#096CE3"
         >
         <Button android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/piao_top_ico1"
             android:id="@+id/backBtn"
             android:layout_centerVertical="true"
             />
         <TextView android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="订单详情"
             android:layout_centerInParent="true"
             android:textColor="#ffffff"
             android:textSize="22dp"
             android:id="@+id/textView"
             />
         <ImageView android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/piao_top_ico3"
             android:layout_toLeftOf="@id/textView"
             android:layout_centerInParent="true"
             android:layout_marginRight="10dp"
             />

         <ProgressBar
             android:id="@+id/progressBar"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="14dp" />
         
     </RelativeLayout>   
     <RelativeLayout android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:padding="15dp"
         >
         <TextView android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="端口："
             android:layout_centerVertical="true"
             android:textColor="#666666"
             android:textSize="14dp"
             android:layout_marginLeft="20dp"
             android:id="@+id/duankou"
             />
         <TextView android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:layout_centerVertical="true"
             android:textColor="#FE652A"
             android:textSize="14dp"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/duankou"
             android:id="@+id/orderName"
             />
         <TextView android:layout_width="30dp"
             android:layout_height="30dp"
             android:text=""
             android:layout_centerVertical="true"
             android:textColor="#ffffff"
             android:textSize="20dp"
             android:layout_marginLeft="10dp"
             android:background="#FE652A"
             android:gravity="center"
             android:layout_alignParentRight="true"
             android:id="@+id/amount1"
             />
     </RelativeLayout>
     <LinearLayout android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_marginLeft="30dp"
         android:orientation="vertical"
         >
         <RelativeLayout android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         >
	         <ImageView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:src="@drawable/piao_photo_da"
	             android:id="@+id/detailImage"
	             />
	         <TextView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="验证条件："
	             android:textColor="#666666"
	             android:textSize="14dp"
	             android:layout_marginLeft="10dp"
	             android:id="@+id/checkText"
	             android:layout_toRightOf="@id/detailImage"
             />
	         <TextView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="asdasd"
	             android:textColor="#FE652A"
	             android:textSize="14dp"
	             android:layout_marginLeft="4dp"
	             android:id="@+id/checkRequirement"
	             android:layout_toRightOf="@id/checkText"
             />
	         <TextView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="订单有效"
	             android:layout_marginTop="30dp"
	             android:textColor="#FE652A"
	             android:textSize="14dp"
	             android:layout_marginLeft="10dp"
	             android:id="@+id/stateTv"
	             android:layout_toRightOf="@id/detailImage"
             />
	         <ImageView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:src="@drawable/piao_yanzheng"
	             android:id="@+id/stateImage"
	             android:layout_marginLeft="10dp"
	             android:layout_toRightOf="@id/stateTv"
	             android:layout_marginTop="30dp"
	             />
	         <TextView android:layout_width="60dp"
	             android:layout_height="30dp"
	             android:text="验  证"
	             android:layout_centerVertical="true"
	             android:textColor="#ffffff"
	             android:textSize="14dp"
	             android:layout_marginLeft="10dp"
	             android:background="#096CE3"
	             android:gravity="center"
	             android:layout_alignParentRight="true"
	             android:layout_alignBottom="@id/detailImage"
	             android:layout_marginRight="15dp"
	             android:id="@+id/checkTicket"
             />
	     </RelativeLayout>
	     <LinearLayout android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:layout_marginTop="20dp"
	         >
	         <TextView android:layout_width="@dimen/detail_text_width"
	             android:gravity="right|center_vertical"
	             android:layout_height="wrap_content"
	             android:text="类型："
	             android:textColor="#666666"
	             android:textSize="14dp"
             />
	         <TextView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text=""
	             android:textColor="#666666"
	             android:textSize="14dp"
	             android:id="@+id/typeTv"
             />
	     </LinearLayout>
	     <LinearLayout android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:layout_marginTop="5dp"
	         >
	         <TextView android:layout_width="@dimen/detail_text_width"
	             android:gravity="right|center_vertical"
	             android:layout_height="wrap_content"
	             android:text="数量："
	             android:textColor="#666666"
	             android:textSize="14dp"
             />
	         <TextView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text=""
	             android:textColor="#FE652A"
	             android:textSize="16dp"
	             android:id="@+id/amountTv"
             />
	     </LinearLayout>
	     <LinearLayout android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:layout_marginTop="5dp"
	         >
	         <TextView android:layout_width="@dimen/detail_text_width"
	             android:gravity="right|center_vertical"
	             android:layout_height="wrap_content"
	             android:text="订单号："
	             android:textColor="#666666"
	             android:textSize="14dp"
             />
	         <TextView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text=""
	             android:textColor="#666666"
	             android:textSize="14dp"
	             android:id="@+id/orderTv"
             />
	     </LinearLayout>
	     <LinearLayout android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:layout_marginTop="5dp"
	         >
	         <TextView android:layout_width="@dimen/detail_text_width"
	             android:gravity="right|center_vertical"
	             android:layout_height="wrap_content"
	             android:text="姓    名："
	             android:textColor="#666666"
	             android:textSize="14dp"
             />
	         <TextView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text=""
	             android:textColor="#666666"
	             android:textSize="14dp"
	             android:id="@+id/nameTv"
             />
	     </LinearLayout>
	     <LinearLayout android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:layout_marginTop="5dp"
	         >
	         <TextView android:layout_width="@dimen/detail_text_width"
	             android:gravity="right|center_vertical"
	             android:layout_height="wrap_content"
	             android:text="手   机："
	             android:textColor="#666666"
	             android:textSize="14dp"
             />
	         <TextView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text=""
	             android:textColor="#666666"
	             android:textSize="14dp"
	             android:id="@+id/phoneTv"
             />
	     </LinearLayout>
	     <LinearLayout android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:layout_marginTop="5dp"
	         >
	         <TextView android:layout_width="@dimen/detail_text_width"
	             android:gravity="right|center_vertical"
	             android:layout_height="wrap_content"
	             android:text="身份证号："
	             android:textColor="#666666"
	             android:textSize="14dp"
             />
	         <TextView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text=""
	             android:textColor="#666666"
	             android:textSize="14dp"
	             android:id="@+id/idTv"
             />
	     </LinearLayout>
	     <LinearLayout android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:layout_marginTop="5dp"
	         >
	         <TextView android:layout_width="@dimen/detail_text_width"
	             android:gravity="right|center_vertical"
	             android:layout_height="wrap_content"
	             android:text="预订时间："
	             android:textColor="#666666"
	             android:textSize="14dp"
             />
	         <TextView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text=""
	             android:textColor="#666666"
	             android:textSize="14dp"
	             android:id="@+id/dateTv"
             />
	     </LinearLayout>
	     <LinearLayout android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:layout_marginTop="5dp"
	         >
	         <TextView android:layout_width="@dimen/detail_text_width"
	             android:gravity="right|center_vertical"
	             android:layout_height="wrap_content"
	             android:text="来    源："
	             android:textColor="#666666"
	             android:textSize="14dp"
             />
	         <TextView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="票管家"
	             android:textColor="#666666"
	             android:textSize="14dp"
	             android:id="@+id/sourceTv"
             />
	     </LinearLayout>
     </LinearLayout>
     </LinearLayout>