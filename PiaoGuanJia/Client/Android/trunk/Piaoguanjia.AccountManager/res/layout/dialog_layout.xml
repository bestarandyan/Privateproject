<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/baise"
    android:minWidth="280dip"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3ABFDE"
        android:padding="@dimen/marginsizel" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提示信息"
            android:textColor="@color/baise"
            android:textIsSelectable="true"
            android:textSize="@dimen/textsizeh" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginsizem"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/marginsizel"
            android:text="备注"
            android:textColor="@color/heise"
            android:textSize="@dimen/textsizem" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="@drawable/app_list_corner_round"
            android:gravity="top|left"
            android:hint="可输入100字符"
            android:maxLength="100"
            android:padding="@dimen/marginsizem"
            android:textColor="@color/heise"
            android:textSize="@dimen/textsizem" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/huise" />

    <LinearLayout
        android:id="@+id/view5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginsizem"
        android:layout_marginRight="@dimen/marginsizem"
        android:background="@color/huise"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/baise"
            android:padding="@dimen/marginsizem"
            android:text="取消"
            android:textColor="@color/heise"
            android:textSize="@dimen/textsizem" />

        <Button
            android:id="@+id/dialog_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/baise"
            android:padding="@dimen/marginsizem"
            android:text="确定"
            android:textColor="@color/heise"
            android:textSize="@dimen/textsizem" />
    </LinearLayout>

</LinearLayout>