<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/marginsizem" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名："
                android:textColor="@color/shenhuise"
                android:textSize="@dimen/textsizel" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="panzhenglei"
                android:textColor="@color/shenhuise"
                android:textSize="@dimen/textsizel" />
            <TextView
                android:id="@+id/tv_amount1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right|bottom"
                android:singleLine="true"
                android:text="￥"
                android:textColor="@color/xuehongse"
                android:textSize="@dimen/textsizel" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginsizem"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_accounttypetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户类型:"
                android:textColor="@color/shenhuise"
                android:textSize="@dimen/textsizel" />

            <TextView
                android:id="@+id/tv_accounttype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="专用账户【泰州华侨城泰州华侨城泰州华侨城】"
                android:textColor="@color/shenhuise"
                android:textSize="@dimen/textsizel" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginsizem"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2013-05-16 12:12:12"
                        android:textColor="@color/shenhuise"
                        android:textSize="@dimen/textsizel" />

                    <TextView
                        android:id="@+id/tv_check01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginsizem"
                        android:singleLine="true"
                        android:text="审核中"
                        android:textColor="@color/lanse"
                        android:textSize="@dimen/textsizel" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginsizem"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tv_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2013-05-16 12:12:12"
                        android:textColor="@color/shenhuise"
                        android:textSize="@dimen/textsizel" />

                    <TextView
                        android:id="@+id/tv_check02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginsizem"
                        android:singleLine="true"
                        android:text="审核通过"
                        android:textColor="@color/lanse"
                        android:textSize="@dimen/textsizel" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_amount2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right|bottom"
                android:singleLine="true"
                android:text="￥"
                android:textColor="@color/juhongse"
                android:textSize="@dimen/textsizex" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>