<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/tv_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_list_corner_round"
        android:hint="用户名"
        android:padding="@dimen/marginsizem"
        android:textColor="@color/heise"
        android:textSize="@dimen/textsizem" />

    <EditText
        android:id="@+id/tv_produceid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginsizem"
        android:background="@drawable/app_list_corner_round"
        android:hint="请输入产品编号"
        android:padding="@dimen/marginsizem"
        android:textColor="@color/heise"
        android:textSize="@dimen/textsizem"
        android:visibility="gone" />
<TextView
        android:id="@+id/productname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="产品名称："
        android:visibility="gone"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/textsizel" />
    <EditText
        android:id="@+id/tv_money"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginsizem"
        android:background="@drawable/app_list_corner_round"
        android:hint="请输入充值金额，负数为扣款"
        android:padding="@dimen/marginsizem"
        android:textColor="@color/heise"
        android:textSize="@dimen/textsizem" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="@dimen/marginsizel"
        android:text="资金来源"
        android:textColor="@color/heise"
        android:textSize="@dimen/textsizem" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_list_corner_round"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/btn_linear1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:padding="@dimen/marginsizem"
                android:text="支付宝"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizem" />

            <ImageView
                android:id="@+id/imageview_gou1"
                android:layout_width="@dimen/marginsizeh"
                android:layout_height="@dimen/marginsizeh"
                android:layout_marginRight="@dimen/marginsizem"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:src="@drawable/cz_gouxuan_ico" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/huise" />

        <LinearLayout
            android:id="@+id/btn_linear2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:padding="@dimen/marginsizem"
                android:text="银行账号"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizem" />

            <ImageView
                android:id="@+id/imageview_gou2"
                android:layout_width="@dimen/marginsizeh"
                android:layout_height="@dimen/marginsizeh"
                android:layout_marginRight="@dimen/marginsizem"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:src="@drawable/cz_gouxuan_ico"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/huise" />

        <LinearLayout
            android:id="@+id/btn_linear3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:padding="@dimen/marginsizem"
                android:text="现金"
                android:textColor="@color/heise"
                android:textSize="@dimen/textsizem" />

            <ImageView
                android:id="@+id/imageview_gou3"
                android:layout_width="@dimen/marginsizeh"
                android:layout_height="@dimen/marginsizeh"
                android:layout_marginRight="@dimen/marginsizem"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:src="@drawable/cz_gouxuan_ico"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginsizem"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radioselecter"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="@dimen/marginsizem"
            android:text="有凭证"
            android:textColor="@color/textcolorselecter"
            android:textSize="@dimen/textsizem" />

        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radioselecter"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/marginsizem"
            android:text="无凭证"
            android:textColor="@color/textcolorselecter"
            android:textSize="@dimen/textsizem" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/btn_linear4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginsizem"
        android:background="@drawable/app_list_corner_round"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="@dimen/marginsizem"
            android:text="图片格式为JPG、PNG、BMP、GIF大小不超过2M"
            android:textColor="@color/heise"
            android:textSize="@dimen/textsizel" />

        <ImageView
            android:layout_width="@dimen/marginsizeh"
            android:layout_height="@dimen/marginsizeh"
            android:layout_marginRight="@dimen/marginsizem"
            android:layout_weight="0"
            android:contentDescription="@string/app_name"
            android:src="@drawable/cz_paizhao_ico" />
    </LinearLayout>

    <EditText
        android:id="@+id/tv_warrantor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginsizem"
        android:background="@drawable/app_list_corner_round"
        android:gravity="top|left"
        android:hint="请输入授权管理员用户名"
        android:padding="@dimen/marginsizem"
        android:textColor="@color/heise"
        android:textSize="@dimen/textsizem"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/tv_takepicture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginsizem"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_head"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/image_round" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_scan"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_corner_round"
                android:text="预览"
                android:textColor="@color/baise" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_corner_round"
                android:text="删除"
                android:textColor="@color/baise" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_linear6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginsizem"
        android:background="@drawable/app_list_corner_round"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="@dimen/marginsizem"
            android:text="申请发票"
            android:textColor="@color/heise"
            android:textSize="@dimen/textsizem" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/marginsizem"
            android:background="@null"
            android:text="是"
            android:textColor="@color/heise"
            android:textSize="@dimen/textsizem" />

        <ImageView
            android:id="@+id/imageview_gou4"
            android:layout_width="@dimen/marginsizeh"
            android:layout_height="@dimen/marginsizeh"
            android:layout_marginRight="@dimen/marginsizeh"
            android:layout_weight="0"
            android:visibility="invisible" 
            android:contentDescription="@string/app_name"
            android:src="@drawable/cz_gouxuan_ico" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/marginsizem"
            android:background="@null"
            android:text="否"
            android:textColor="@color/heise"
            android:textSize="@dimen/textsizem" />

        <ImageView
            android:id="@+id/imageview_gou5"
            android:layout_width="@dimen/marginsizeh"
            android:layout_height="@dimen/marginsizeh"
            android:layout_marginRight="@dimen/marginsizem"
            android:layout_weight="0"
            android:contentDescription="@string/app_name"
            android:src="@drawable/cz_gouxuan_ico"
            />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="@dimen/marginsizel"
        android:text="备注"
        android:textColor="@color/heise"
        android:textSize="@dimen/textsizem" />

    <EditText
        android:id="@+id/tv_remark"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="@drawable/app_list_corner_round"
        android:gravity="top|left"
        android:hint="可输入100字符"
        android:maxLength="100"
        android:padding="@dimen/marginsizem"
        android:textColor="@color/heise"
        android:textSize="@dimen/textsizem" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginsizem"
        android:background="#3ABFDE"
        android:padding="@dimen/marginsizel"
        android:text="确认"
        android:textColor="@color/baise"
        android:textSize="@dimen/textsizem" />

</LinearLayout>