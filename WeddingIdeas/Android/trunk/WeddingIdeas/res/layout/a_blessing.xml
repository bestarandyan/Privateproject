<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/parent"
    >
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_bg"
        >
        <ImageButton android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/top_fanhui_ico"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="10dp"
            android:id="@+id/backBtn3"
            />
        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/top_line"
            android:layout_toRightOf="@id/backBtn3"
            />
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:textColor="#ffffff"
	        android:gravity="center"
	        android:layout_centerInParent="true"
	        android:id="@+id/topView"
	        android:text="送上祝福" />
    </RelativeLayout>
			    <RelativeLayout android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:background="@drawable/bg_blessing"
			        android:id="@+id/parentLayout"
			        >
			         <ImageView android:layout_width="match_parent"
			             android:layout_height="match_parent"
			             android:background="@drawable/bg_blessing_frame"
			             android:layout_margin="5dp"
			             />       
			           <LinearLayout android:layout_width="match_parent"
			               android:layout_height="match_parent"
			               android:orientation="vertical"
			               android:background="@null"
			               android:gravity="center_horizontal"
			               android:layout_marginTop="45dp"
			               >
			             <!-- 送上祝福 -->
			                <LinearLayout android:layout_width="match_parent"
				               android:layout_height="wrap_content"
				               android:orientation="vertical"
				               android:background="@null"
				               android:gravity="center"
				               android:id="@+id/layoutTop"
				               >
			              <LinearLayout android:layout_width="wrap_content"
				               android:layout_height="wrap_content"
				               android:orientation="horizontal"
				               android:background="@null"
				               android:gravity="center_vertical"
				               android:id="@+id/layout1"
				               >
			              		<ImageView android:layout_width="@dimen/img_size"
			              		    android:layout_height="@dimen/img_size"
			              		    android:src="@drawable/icon_one"
			              		    />
			              		<TextView
							        android:layout_width="wrap_content"
							        android:layout_height="wrap_content"
							        android:textSize="20sp"
							        android:textColor="#ffffff"
							        android:gravity="center"
							        android:layout_marginLeft="10dp"
							        android:layout_marginRight="10dp"
							        android:id="@+id/titletext1"
							        android:text="送上祝福" />
			              		<ImageView android:layout_width="wrap_content"
			              		    android:layout_height="wrap_content"
			              		    android:src="@drawable/icon_blessing"
			              		    />
			           		</LinearLayout>  
			           		<RelativeLayout android:layout_width="match_parent"
			           		    android:layout_height="100dp"
			           		    android:background="@drawable/bg_zhufu_input"
			           		    android:id="@+id/zhufuLayout"
			           		    android:visibility="gone"
			           		    android:layout_marginLeft="40dp"
			           		    android:layout_marginRight="40dp"
			           		    >
			              		<LinearLayout android:layout_width="match_parent"
			              		    android:layout_height="wrap_content"
			              		    android:orientation="horizontal"
			              		    android:id="@+id/btnLayout"
			              		    android:layout_alignParentBottom="true"
			              		    android:gravity="center_horizontal"
			              		    android:paddingBottom="3dp"
			              		    >
			              		    <Button android:layout_width="wrap_content"
				              		    android:layout_height="35dp"
				              		    android:background="@drawable/zhufu_btn"
				              		    android:text="发送"
				              		    android:textColor="#ffffff"
				              		    android:textSize="@dimen/blessing_btn_size"
				              		    android:gravity="center"
				              		    android:id="@+id/zhuFuSendBtn"
				              		    android:paddingLeft="30dp"
				              		    android:paddingRight="30dp"
				              		    />
				              		<Button android:layout_width="wrap_content"
				              		    android:layout_height="35dp"
				              		    android:background="@drawable/zhufu_btn"
				              		    android:text="取消"
				              		    android:textColor="#ffffff"
				              		    android:textSize="@dimen/blessing_btn_size"
				              		    android:gravity="center"
				              		    android:id="@+id/zhuFuCancleBtn"
				              		    android:layout_marginLeft="10dp"
				              		    android:paddingLeft="30dp"
				              		    android:paddingRight="30dp"
				              		    />
			              		</LinearLayout>
			              		
			           		    <EditText android:layout_width="match_parent"
			           		        android:layout_height="match_parent"
			           		        android:background="@null"
			           		        android:id="@+id/zhufuEt"
			           		        android:hint="写上您对我们的祝福吧..."
			           		        android:textColor="#000000"
			           		        android:textSize="14sp"
			           		        android:gravity="top|left"
			           		        android:layout_margin="8dp"
			           		        android:layout_above="@id/btnLayout"
			           		        />
			           		</RelativeLayout>
			           		</LinearLayout>
			           		<!-- 我要赴宴-->
			           		<LinearLayout android:layout_width="match_parent"
				               android:layout_height="wrap_content"
				               android:orientation="vertical"
				               android:background="@null"
				               android:gravity="center"
				               android:id="@+id/layoutCenter"
				               android:layout_marginTop="50dp"
				               >
			           		<LinearLayout android:layout_width="wrap_content"
				               android:layout_height="wrap_content"
				               android:orientation="horizontal"
				               android:background="@null"
				               android:gravity="center"
				               android:id="@+id/layout2"
				               >
			              		<ImageView android:layout_width="@dimen/img_size"
			              		    android:layout_height="@dimen/img_size"
			              		    android:src="@drawable/icon_two"
			              		    />
			              		<TextView
							        android:layout_width="wrap_content"
							        android:layout_height="wrap_content"
							        android:textSize="20sp"
							        android:textColor="#ffffff"
							        android:gravity="center"
							        android:layout_marginLeft="10dp"
							        android:layout_marginRight="10dp"
							        android:id="@+id/titletext2"
							        android:text="我要赴宴" />
			              		<ImageView android:layout_width="wrap_content"
			              		    android:layout_height="wrap_content"
			              		    android:src="@drawable/icon_feast"
			              		    />
			           		</LinearLayout>  
			           		<LinearLayout android:layout_width="match_parent"
			           		    android:layout_height="wrap_content"
			           		    android:background="@drawable/bg_zhufu_input"
			           		    android:orientation="vertical"
			           		    android:id="@+id/fuyanLayout"
			           		    android:padding="10dp"
			           		    android:visibility="gone"
			           		    android:layout_marginLeft="40dp"
			           		    android:layout_marginRight="40dp"
			           		    >
			              		<LinearLayout android:layout_width="match_parent"
				           		    android:layout_height="wrap_content"
				           		    android:background="@drawable/bg_zhufu_input"
				           		    android:orientation="horizontal"
				           		    android:gravity="center_vertical"
				           		    >
			           		    	<TextView android:layout_width="wrap_content"
			           		    	    android:layout_height="wrap_content"
			           		    	    android:text="姓名："
			           		    	    android:textColor="#666765"
			           		    	    android:textSize="14sp"
			           		    	    />
				              		<EditText android:layout_width="match_parent"
				           		        android:layout_height="30dp"
				           		        android:background="@drawable/bg_fuyan_input"
				           		        android:id="@+id/nameEt"
				           		        android:textColor="#000000"
				           		        android:textSize="14sp"
				           		        android:gravity="center_vertical"
				           		        android:paddingLeft="5dp"
				           		        android:hint="请输入您的姓名"
				           		        />
			              		 </LinearLayout>
			              		 <LinearLayout android:layout_width="match_parent"
				           		    android:layout_height="wrap_content"
				           		    android:background="@drawable/bg_zhufu_input"
				           		    android:orientation="horizontal"
				           		    android:gravity="center_vertical"
				           		    android:layout_marginTop="10dp"
				           		    >
			           		    	<TextView android:layout_width="wrap_content"
			           		    	    android:layout_height="wrap_content"
			           		    	    android:text="人数："
			           		    	    android:textColor="#666765"
			           		    	    android:textSize="14sp"
			           		    	    />
				              		<EditText android:layout_width="match_parent"
				           		        android:layout_height="30dp"
				           		        android:background="@drawable/bg_fuyan_input"
				           		        android:id="@+id/peopleNumberEt"
				           		        android:textColor="#000000"
				           		        android:textSize="14sp"
				           		        android:gravity="center_vertical"
				           		        android:inputType="number"
				           		        android:hint="请输入赴宴人数"
				           		        />
			              		 </LinearLayout>
			              		 <LinearLayout android:layout_width="match_parent"
			              		    android:layout_height="wrap_content"
			              		    android:orientation="horizontal"
			              		    android:gravity="center_horizontal"
			              		    android:layout_marginTop="5dp"
			              		    >
			              		    <Button android:layout_width="wrap_content"
				              		    android:layout_height="35dp"
				              		    android:background="@drawable/zhufu_btn"
				              		    android:text="发送"
				              		    android:textColor="#ffffff"
				              		    android:textSize="@dimen/blessing_btn_size"
				              		    android:gravity="center"
				              		    android:id="@+id/sendBtn"
				              		    android:paddingLeft="30dp"
				              		    android:paddingRight="30dp"
				              		    />
				              		<Button android:layout_width="wrap_content"
				              		    android:layout_height="35dp"
				              		    android:background="@drawable/zhufu_btn"
				              		    android:text="取消"
				              		    android:textColor="#ffffff"
				              		    android:textSize="@dimen/blessing_btn_size"
				              		    android:gravity="center"
				              		    android:id="@+id/fuyanCancleBtn"
				              		    android:layout_marginLeft="10dp"
				              		    android:paddingLeft="30dp"
				              		    android:paddingRight="30dp"
				              		    />
			              		</LinearLayout>
			           		</LinearLayout>
			           		</LinearLayout>
			           		  <!-- 分享幸福 -->
			           		<LinearLayout android:layout_width="match_parent"
				               android:layout_height="wrap_content"
				               android:orientation="horizontal"
				               android:background="@null"
				               android:gravity="center"
				               android:id="@+id/layout3"
				               android:layout_marginTop="50dp"
				               >
			              		<ImageView android:layout_width="@dimen/img_size"
			              		    android:layout_height="@dimen/img_size"
			              		    android:src="@drawable/icon_three"
			              		    android:id="@+id/szImg3"
			              		    />
			              		<TextView
							        android:layout_width="wrap_content"
							        android:layout_height="wrap_content"
							        android:textSize="20sp"
							        android:textColor="#ffffff"
							        android:gravity="center"
							        android:layout_marginLeft="10dp"
							        android:layout_marginRight="10dp"
							        android:id="@+id/titletext3"
							        android:text="分享幸福" />
			              		<ImageView android:layout_width="wrap_content"
			              		    android:layout_height="wrap_content"
			              		    android:src="@drawable/icon_share"
			              		    />
			           		</LinearLayout>  
			           		</LinearLayout>
			    </RelativeLayout>
</LinearLayout>