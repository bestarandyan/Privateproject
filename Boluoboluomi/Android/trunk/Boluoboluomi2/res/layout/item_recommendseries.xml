<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="6dp"
    >
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:id="@+id/photo"/>
    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:layout_alignParentRight="true"
	        android:id="@+id/iamge2"
	        android:layout_centerVertical="true"
	        android:visibility="visible"
	        android:src="@drawable/id_dianjia_ico"/>
    <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_centerVertical="true"
	    android:layout_toLeftOf="@id/iamge2"
	    android:layout_toRightOf="@id/photo"
	    android:layout_marginLeft="5dp"
	    >
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:textColor="#000000"
		    android:textSize="16sp"
		    android:text="三周年庆典特惠A套系"
	        android:id="@+id/itemTitle"/>
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:textColor="#888888"
		    android:textSize="16sp"
		    android:text="原价：9099元"
		    android:layout_marginTop="10dp"
	        android:id="@+id/itemOldMoney"/>
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:textColor="#D23232"
		    android:textSize="16sp"
		    android:layout_marginTop="10dp"
		    android:text="限时特价：4998元"
	        android:id="@+id/itemNowMoney"/>
	    </LinearLayout>
	    
</RelativeLayout>