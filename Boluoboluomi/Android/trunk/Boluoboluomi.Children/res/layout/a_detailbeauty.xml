<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:drawablePadding="0dip"
    android:ellipsize="marquee"
    android:fadingEdge="horizontal"
    android:gravity="top|center_horizontal"
    android:maxLines="2"
    android:id="@+id/parent"
    android:textColor="#000000" >
	 <LinearLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:gravity="center"
	    android:id="@+id/bottomLinear"
	    android:background="@drawable/id_photo_bottom_bg"
	    android:paddingTop="6dp"
	    android:paddingBottom="6dp"
	    android:orientation="horizontal">
	        <Button android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:id="@+id/bottomBackBtn"
		        android:layout_weight="1"
		        android:layout_marginLeft="10dp"
		        android:drawableTop="@drawable/id_meitu_ico1"
		        android:text="返回"
		        android:textColor="#ffffff"
		        android:background="@null"
		        android:textSize="14sp"
		        android:drawablePadding="2dp"/>
	        <Button android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:id="@+id/zixunBtn"
		        android:layout_weight="1"
		        android:layout_marginLeft="10dp"
		        android:drawableTop="@drawable/id_meitu_ico2"
		        android:text="咨询"
		        android:textColor="#ffffff"
		        android:background="@null"
		        android:textSize="14sp"
		        android:drawablePadding="2dp"/>
	        <Button android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:id="@+id/ShareBtn"
		        android:layout_weight="1"
		        android:drawableTop="@drawable/id_photo_ico5"
		        android:text="分享"
		        android:textColor="#ffffff"
		        android:background="@null"
		        android:textSize="14sp"
		        android:drawablePadding="2dp"/>
	</LinearLayout>
	
	<RelativeLayout android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:background="@drawable/babe_top_bg"
	    android:orientation="horizontal"
	    android:id="@+id/top_linear"
	    >
	    <Button android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textColor="#ffffff"
	        android:textStyle="bold"
	        android:textSize="14dp"
	        android:id="@+id/backBtn"
	        android:layout_centerVertical="true"
	        android:background="@drawable/babe_fh_btn"/>
	    <ImageView android:layout_width="1.5dp"
	        android:layout_height="match_parent"
	        android:background="@drawable/babe_top_line"
	        android:layout_toRightOf="@id/backBtn"
	        android:layout_marginLeft="10dp"
	        />
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="美图欣赏"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:textColor="#ffffff"
	        android:textSize="20dp"
	        android:id="@+id/title"
	        android:textStyle="bold"/>
	    <ImageButton android:background="@null"
	        android:src="@drawable/id_paizhao_ico"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true"
	        android:id="@+id/takePhoto"
	        android:layout_centerVertical="true"
	        android:padding="10dp"
	        android:visibility="invisible"
	        />
	    <ImageView android:layout_width="1.5dp"
	        android:layout_height="match_parent"
	        android:background="@drawable/babe_top_line"
	        android:layout_toLeftOf="@id/takePhoto"
	        android:layout_marginLeft="15dp"
	        android:id="@+id/photoLine"
	        android:visibility="invisible"
	        />
	</RelativeLayout> 
	<RelativeLayout android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_above="@id/bottomLinear"
	    android:layout_below="@id/top_linear"
	    android:background="#f5f5f5"
	    >
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_alignParentBottom="true"
	        android:id="@+id/centerBottomLayout"
	        >
	        <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:drawableLeft="@drawable/id_meitu_btn1"
	            android:text="我要推荐"
	            android:textColor="#000000"
	            android:textSize="20sp"
	            android:drawablePadding="10dp"
	            android:padding="20dp"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:id="@+id/tuijianTv"
	            />
	        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/id_tanchu_line"
            />
	        <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:drawableRight="@drawable/id_meitu_btn2"
	            android:text="欣赏美图"
	            android:textColor="#000000"
	            android:textSize="20sp"
	            android:drawablePadding="10dp"
	            android:padding="20dp"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:id="@+id/admireTv"
	            />
	    </LinearLayout>
	    <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/soso_zc_line"
            android:layout_above="@id/centerBottomLayout"
            android:id="@+id/bottomLine"
            />
	    <ScrollView android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_above="@id/bottomLine"
	        >
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:padding="10dp"
	        >
	        <ImageView android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/xiaotu"
		        android:adjustViewBounds="true"
		        android:id="@+id/photo"/>
		    <LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_marginLeft="5dp"
			    >
			    <TextView android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
				    android:textColor="#000000"
				    android:textSize="20dp"
				    android:textStyle="bold"
				    android:text="开心农场"
			        android:id="@+id/nameTv"/>
			    <LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:gravity="center_vertical"
				    android:layout_marginTop="5dp"
				    >
				    <TextView android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
					    android:textColor="#999999"
					    android:textSize="14dp"
					    android:text="推荐热度："
				        />
				    <RatingBar
						android:id="@+id/xing"
						style="@style/ratingBar_xiao"
						android:numStars="5"
						android:layout_width="wrap_content"
						android:layout_height="20dp"
						android:stepSize="1"
						 >
					</RatingBar>
			    </LinearLayout>
			    <TextView android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
				    android:textColor="#999999"
				    android:textSize="14dp"
				    android:visibility="visible"
				    android:layout_marginTop="5dp"
				    android:text="浪漫、阳光、绿地、花海、喷泉、海滩、没有一样不是年亲人梦境之地，将浪漫发挥到极致。浪漫、阳光、绿地、花海、喷泉、海滩、没有一样不是年亲人梦境之地，将浪漫发挥到极致。"
			        android:id="@+id/jieshaoTv"/>
			    </LinearLayout>
	    </LinearLayout>
	    </ScrollView>
	</RelativeLayout>
</RelativeLayout>