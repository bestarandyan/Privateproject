<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">
   <RelativeLayout android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:background="@drawable/babe_top_bg"
	    android:orientation="horizontal"
	    android:id="@+id/top_linear"
	    >
	    <ImageButton android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#ffffff"
	        android:textStyle="bold"
	        android:textSize="14dp"
	        android:id="@+id/backBtn"
	        android:padding="10dp"
	        android:layout_centerVertical="true"
	        android:background="@null"
	        android:src="@drawable/babe_fh_btn"/>
	    <ImageView android:layout_width="1.5dp"
	        android:layout_height="match_parent"
	        android:background="@drawable/babe_top_line"
	        android:layout_toRightOf="@id/backBtn"
	        />
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="宝 宝 照 片"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:textColor="#ffffff"
	        android:textSize="20dp"
	        android:id="@+id/title"
	        android:textStyle="bold"/>
	   
	</RelativeLayout>
	
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#518F08"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:id="@+id/bottomLayout"
        >
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rightLayout"
            android:layout_alignParentRight="true"
            >
            <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="确 定"
                android:id="@+id/trueBtn"
                android:gravity="center"
                android:background="#294E00"
                android:textColor="#ffffff"
                android:textSize="14sp"
                />
            <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="取 消"
                android:textColor="#ffffff"
                android:id="@+id/cancleBtn"
                android:background="#294E00"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="2dp"
                />
        </LinearLayout>
        <!-- <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="重 拍"
                android:id="@+id/againBtn"
                android:gravity="center"
                android:background="#294E00"
                android:textColor="#ffffff"
                android:layout_toLeftOf="@id/rightLayout"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:layout_alignTop="@id/rightLayout"
                android:layout_alignBottom="@id/rightLayout"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                /> -->
        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msgEt"
            android:hint="请输入照片名称"
            android:background="#294E00"
            android:gravity="top|left"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:padding="5dp"
            android:layout_toLeftOf="@id/rightLayout"
            android:layout_alignTop="@id/rightLayout"
            android:layout_alignBottom="@id/rightLayout"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
     <ImageView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:layout_above="@id/bottomLayout"
        android:layout_below="@id/top_linear"
        />
</RelativeLayout>