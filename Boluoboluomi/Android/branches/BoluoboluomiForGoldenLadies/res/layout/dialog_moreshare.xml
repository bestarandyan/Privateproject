<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f5f5f5">
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:text="请选择一项操作"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:padding="10dp"
        android:drawableRight="@drawable/id_tanchu_close"
        android:id="@+id/shareMoreClose"
        />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:text="微信"
        android:textColor="#000000"
        android:textSize="22sp"
        android:drawableLeft="@drawable/id_weixin"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:id="@+id/shareWeixin"
        android:layout_marginLeft="20dp"
        />
    <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/soso_zc_line"
            />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:text="新浪微博"
        android:textColor="#000000"
        android:textSize="22sp"
        android:drawableLeft="@drawable/id_sina"
        android:gravity="center_vertical"
         android:drawablePadding="10dp"
        android:id="@+id/shareSina"
        android:layout_marginLeft="20dp"
        />
    <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/soso_zc_line"
            />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:text="腾讯微博"
        android:textColor="#000000"
        android:textSize="22sp"
        android:drawableLeft="@drawable/id_tengxun"
        android:gravity="center_vertical"
         android:drawablePadding="10dp"
        android:id="@+id/shareTenxun"
        android:layout_marginLeft="20dp"
        />
    <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/soso_zc_line"
            />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:text="QQ空间"
        android:textColor="#000000"
        android:textSize="22sp"
        android:drawableLeft="@drawable/id_kongjian"
        android:gravity="center_vertical"
         android:drawablePadding="10dp"
        android:id="@+id/shareKongjian"
        android:layout_marginLeft="20dp"
        />
    <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/soso_zc_line"
            />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:text="短信"
        android:textColor="#000000"
        android:textSize="22sp"
        android:drawableLeft="@drawable/id_duanxin"
        android:gravity="center_vertical"
         android:drawablePadding="10dp"
        android:id="@+id/shareDuanxin"
        android:layout_marginLeft="20dp"
        />
    <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/soso_zc_line"
            />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:text="邮件"
        android:textColor="#000000"
        android:textSize="22sp"
        android:drawableLeft="@drawable/id_email"
        android:gravity="center_vertical"
         android:drawablePadding="10dp"
        android:id="@+id/shareEmail"
        android:layout_marginLeft="20dp"
        />
</LinearLayout>