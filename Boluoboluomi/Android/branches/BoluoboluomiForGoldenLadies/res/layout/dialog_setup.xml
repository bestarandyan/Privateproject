<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@drawable/id_tanchu_title_bg"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            />
        <ImageButton android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/id_tanchu_close"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/closeWindowBtn"
            />
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f5f5f5"
        >
        <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:text="向左旋转"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/setupLayout1"
        android:layout_marginLeft="20dp"
        />
    <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/soso_zc_line"
            />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:text="向右旋转"
        android:textColor="#000000"
       android:textSize="18sp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/setupLayout2"
        android:layout_marginLeft="20dp"
        />
    <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/soso_zc_line"
            />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:text="设置为壁纸"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/setupLayout3"
        android:layout_marginLeft="20dp"
        />
    <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/soso_zc_line"
            />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:text="设置为头像"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/setupLayout4"
        android:layout_marginLeft="20dp"
        />
    <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/soso_zc_line"
            />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:text="删除"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/setupLayout5"
        android:layout_marginLeft="20dp"
        />
   <!--  <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/soso_zc_line"
            android:id="@+id/line5"
            />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:text="详细信息"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/setupLayout6"
        android:layout_marginLeft="20dp"
        /> -->
    </LinearLayout>
</LinearLayout>
