<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="#F2F2F2"
    android:paddingLeft="10dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingRight="2dp"
    android:gravity="center_vertical"
     >
     <ImageView 
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/room_image"
        android:src="@drawable/soso_gray_logo"
        android:background="@drawable/room_list_img_bg"
        />
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/state_image"
        android:src="@drawable/soso_house_weizu"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        />
	<LinearLayout  android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_marginLeft="6dp"
		    
		    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/room_name"
	        android:text="中环名品公馆"
	        android:textColor="#84a307"
	        android:textSize="18dp"
	        />
	    <LinearLayout  android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:gravity="center_vertical"
		    android:layout_marginTop="5dp"
		    >
	    <!-- <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/roomNumber"
	        android:text="1615室"
	        android:textColor="#666666"
	        android:textSize="12dp"
	        /> -->
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/roomMoney"
	        android:text="￥3.5-5.0"
	        android:textColor="#666666"
	        android:textSize="12dp"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/roomAcreage"
	        android:text="1000m²"
	        android:textColor="#666666"
	        android:textSize="12dp"
	        />
	</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="right|center_vertical"
	    android:orientation="horizontal"
	    >
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/soso_house_edit"
	        android:id="@+id/bianji"
	        android:visibility="gone"
	        />
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/soso_house_tesong"
	        android:id="@+id/tuisong"
	        android:visibility="gone"
	        />
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/soso_house_no"
	        android:id="@+id/setState"
	        android:visibility="gone"
	        android:layout_marginRight="10dp"
	        />
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/soso_house_delete"
	        android:id="@+id/deleteBtn"
	        android:visibility="gone"
	        />
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/soso_house_dianji"
	        android:id="@+id/jiantou"
	        android:visibility="visible"
	        android:layout_marginRight="10dp"
	        />
	    
	</LinearLayout>
</LinearLayout>
