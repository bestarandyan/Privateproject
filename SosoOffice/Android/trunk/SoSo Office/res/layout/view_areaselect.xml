<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0.0"
			android:textColor="#97B617"
			android:textSize="16dp"
			android:layout_marginLeft="5dp"
			android:layout_alignParentLeft="true"
			android:id="@+id/MinText"
			android:layout_centerVertical="true"
		/>
        <TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="元"
			android:textColor="#97B617"
			android:textSize="16dp"
			android:layout_marginLeft="5dp"
			android:layout_toRightOf="@id/MinText"
			android:id="@+id/MinUnitText"
			android:layout_centerVertical="true"
		/>
        <TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="元"
			android:textColor="#97B617"
			android:textSize="16dp"
			android:id="@+id/MaxUnitText"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
		/>
	  <TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0.0"
			android:textColor="#97B617"
			android:textSize="16dp"
			android:layout_toLeftOf="@id/MaxUnitText"
			android:id="@+id/MaxText"
			android:layout_centerVertical="true"
			android:layout_marginRight="5dp"
			android:gravity="right"
		/> 			
    </RelativeLayout>
   

<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:id="@+id/selectLayout"
    android:orientation="vertical" >
	<ImageView android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/soso_la_back"
	    android:layout_centerVertical="true"
	    />
        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/parentLayout"
            android:layout_centerVertical="true"
            >
            <LinearLayout android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@null"
	            android:id="@+id/layout"
	            android:gravity="center_vertical"
            >
	            <ImageView android:background="@drawable/soso_room_gun_img"
	                android:layout_width="28dp"
	                android:layout_height="wrap_content"
	                android:id="@+id/leftImg"
	                />
	            <ImageView android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/soso_huadong_dot"
	                android:id="@+id/btn1"
	                android:layout_marginLeft="-28dp"
	                />
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@null"
	            android:id="@+id/layout1"
	            android:layout_alignParentRight="true"
	            android:orientation="horizontal"
	            android:gravity="center_vertical"
            >
	            <ImageView android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/soso_huadong_dot"
	                android:id="@+id/btn2"
	                android:layout_gravity="center_vertical"
	                />
	            <ImageView android:background="@drawable/soso_la_img"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:id="@+id/rightImg"
	                android:layout_marginLeft="-2dp"
	                />
            </LinearLayout>
        </RelativeLayout>
	</RelativeLayout>
</LinearLayout>