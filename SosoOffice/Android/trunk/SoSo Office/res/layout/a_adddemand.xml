<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2"
    android:id="@+id/parent"
    android:focusable="true"  
    android:focusableInTouchMode="true"
    android:orientation="vertical" >
<RelativeLayout	android:id="@+id/top_linear"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/soso_top_bg1"
	    android:orientation="vertical" >
	    <Button android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/backBtn"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:background="@drawable/soso_fh_ico"/>
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:textColor="#ffffff"
	        android:textSize="20dp"
	        android:text="需求发布"
	        
	        />
    </RelativeLayout>
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbarStyle="outsideOverlay"
        android:id="@+id/scrollView"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >
		     <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="标题"
		                android:textColor="#666666"
		                android:textSize="16dp"
		                android:layout_marginLeft="10dp"
		                />
		     <EditText android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:background="@drawable/soso_et_background"
		         android:id="@+id/titleEt"
		         android:singleLine="true"
		         android:layout_marginTop="2dp"
		         android:textColor="#333333"
		         />
		     <LinearLayout android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:background="@drawable/register_check_background"
			    android:gravity="center_vertical"
			    android:padding="5dp"
			    android:layout_marginLeft="0dp"
			    android:layout_marginRight="0dp"
			    android:layout_marginBottom="5dp"
			    android:layout_marginTop="3dp"
			    android:id="@+id/titleCheckLayout"
			    android:visibility="gone"
			    >
		    	<ImageView android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:src="@drawable/register_check1"
		    	    />
			    <TextView android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="请输入标题"
				    android:textColor="@color/red"
				    android:textSize="12dp"
				    android:layout_marginLeft="5dp"
				    android:id="@+id/titleCheck"
			    />
		</LinearLayout>
		     <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	             android:orientation="horizontal"
	            android:layout_marginTop="10dp"
	            android:layout_marginLeft="10dp"
	            android:gravity="center_vertical"
	            >
		            <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="联系方式(手机/座机)"
		                android:textColor="#666666"
		                android:textSize="16dp"
		                />
		            <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text=" * "
		                android:textColor="#ff0000"
		                android:textSize="16dp"
		                />
		            
		     </LinearLayout>
		     <EditText android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:background="@drawable/soso_et_background"
		         android:id="@+id/linkManEt"
		         android:singleLine="true"
		         android:layout_marginTop="2dp"
		         android:hint="如:13888888888或0738-3488460"
		         android:textColor="#333333"
		         />
		     <LinearLayout android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:orientation="horizontal"
					    android:background="@drawable/register_check_background"
					    android:gravity="center_vertical"
					    android:padding="5dp"
					    android:layout_marginLeft="0dp"
					    android:id="@+id/phoneCheckLayout"
					    android:visibility="gone"
					    >
				    	<ImageView android:layout_width="wrap_content"
				    	    android:layout_height="wrap_content"
				    	    android:src="@drawable/register_check1"
				    	    />
					    <TextView android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:text="请输入正确的联系方式"
						    android:textColor="@color/red"
						    android:textSize="10dp"
						    android:layout_marginLeft="2dp"
						    android:id="@+id/phoneCheckTv"
					    />
					</LinearLayout>
		            <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="房源类型"
		                android:textColor="#666666"
		                android:textSize="16dp"
		                android:layout_marginLeft="10dp"
		                android:layout_marginTop="10dp"
		                />
		     <Button android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:id="@+id/typeSpinner"
		                android:background="@drawable/soso_releasenewroom_et"
		                android:gravity="left|center_vertical"
		                android:paddingLeft="10dp"
		                android:layout_marginTop="3dp"
		                android:textColor="#333333"
		                />
		     <LinearLayout android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:background="@drawable/register_check_background"
			    android:gravity="center_vertical"
			    android:padding="5dp"
			    android:layout_marginLeft="0dp"
			    android:layout_marginRight="0dp"
			    android:layout_marginBottom="5dp"
			    android:layout_marginTop="3dp"
			    android:id="@+id/typeCheckLayout"
			    android:visibility="gone"
			    >
		    	<ImageView android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:src="@drawable/register_check1"
		    	    />
			    <TextView android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="请选择房源类型"
				    android:textColor="@color/red"
				    android:textSize="12dp"
				    android:layout_marginLeft="5dp"
				    android:id="@+id/typeCheck"
			    />
		</LinearLayout>
		     <LinearLayout  android:id="@+id/acreageLayout"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="10dp"
				    android:orientation="horizontal"
				    >
                <LinearLayout  android:id="@+id/acreageLayout"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="3dp"
				    android:orientation="vertical"
				    android:layout_weight="1"
				    >
	                <TextView android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="面积下限(平米)"
			                android:textColor="#666666"
			                android:textSize="16dp"
			                android:layout_marginLeft="10dp"
			                />
	                <EditText android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:background="@drawable/soso_et_background"
		                android:layout_marginRight="10dp"
		                android:id="@+id/minAcreageEt"
		                android:singleLine="true"
		                android:inputType="phone"
		                android:hint="请输入最小面积"
		                android:textSize="16dp"
		                android:textColor="#333333"
		                />
                </LinearLayout>
               
                <LinearLayout  android:id="@+id/acreageLayout"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="3dp"
				    android:orientation="vertical"
				    android:layout_weight="1"
				    >
	                <TextView android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="面积上限(平米)"
			                android:textColor="#666666"
			                android:textSize="16dp"
			                android:layout_marginLeft="10dp"
			                />
	                <EditText android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:background="@drawable/soso_et_background"
		                android:id="@+id/maxAcreageEt"
		                android:singleLine="true"
		                android:inputType="phone"
		                android:hint="请输入最大面积"
		                android:textSize="16dp"
		                android:textColor="#333333"
		                />
                </LinearLayout>
                </LinearLayout>
                 <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <LinearLayout android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:background="@drawable/register_check_background"
			    android:gravity="center_vertical"
			    android:padding="5dp"
			    android:layout_marginLeft="0dp"
			    android:layout_marginRight="10dp"
			    android:layout_marginBottom="5dp"
			    android:layout_marginTop="3dp"
			    android:id="@+id/acreageDownCheckLayout"
			    android:visibility="gone"
			    android:layout_weight="1"
			    >
		    	<ImageView android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:src="@drawable/register_check1"
		    	    />
			    <TextView android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="请输入面积下限"
				    android:textColor="@color/red"
				    android:textSize="12dp"
				    android:layout_marginLeft="5dp"
				    android:id="@+id/acreageDownCheck"
			    />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:background="@drawable/register_check_background"
			    android:gravity="center_vertical"
			    android:padding="5dp"
			    android:layout_marginLeft="0dp"
			    android:layout_marginRight="0dp"
			    android:layout_marginBottom="5dp"
			    android:layout_marginTop="3dp"
			    android:id="@+id/acreageUpCheckLayout"
			    android:visibility="gone"
			    android:layout_weight="1"
			    >
		    	<ImageView android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:src="@drawable/register_check1"
		    	    />
			    <TextView android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="请输入房源上限"
				    android:textColor="@color/red"
				    android:textSize="12dp"
				    android:layout_marginLeft="5dp"
				    android:id="@+id/acreageUpCheck"
			    />
		</LinearLayout>
		</LinearLayout>
		            <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="房租金额(元/平米/天)"
		                android:textColor="#666666"
		                android:textSize="16dp"
		                android:layout_marginLeft="10dp"
		                 android:layout_marginTop="10dp"
		                />
		     <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:orientation="horizontal"
	            android:layout_marginTop="3dp"
	            >
		             <CheckBox
						android:id="@+id/checkBox"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:button="@drawable/radiobutton"
						android:text=" 含物业费"
						android:checked="true"
						android:textSize="18dp"
						android:layout_marginLeft="30dp"
						android:layout_marginRight="10dp"
						android:textColor="#666666"
						android:layout_alignParentRight="true"
						android:visibility="gone"
						 />
		            <LinearLayout android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="3dp"
		                android:id="@+id/priceLayout"
		                >
		                
		               </LinearLayout>
		     </RelativeLayout>
		            
		            <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	             android:orientation="horizontal"
	            android:layout_marginTop="10dp"
	            android:layout_marginLeft="10dp"
	            android:gravity="center_vertical"
	            >
		            <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="简介说明"
		                android:textColor="#666666"
		                android:textSize="16dp"
		                />
		            <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text=" * "
		                android:textColor="#ff0000"
		                android:textSize="16dp"
		                />
		            <LinearLayout android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:orientation="horizontal"
					    android:background="@drawable/register_check_background"
					    android:gravity="center_vertical"
					    android:padding="5dp"
					    android:layout_marginLeft="0dp"
					    android:layout_marginRight="0dp"
					    android:layout_marginBottom="5dp"
					    android:layout_marginTop="3dp"
					    android:id="@+id/jianjieCheckLayout"
					    android:visibility="gone"
					    >
				    	<ImageView android:layout_width="wrap_content"
				    	    android:layout_height="wrap_content"
				    	    android:src="@drawable/register_check1"
				    	    />
					    <TextView android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:text="请输入需求简介"
						    android:textColor="@color/red"
						    android:textSize="12dp"
						    android:layout_marginLeft="5dp"
						    android:id="@+id/jianjieCheck"
					    />
		</LinearLayout>
		     </LinearLayout>
		     <EditText android:layout_width="fill_parent"
		         android:layout_height="150dp"
		         android:background="@drawable/soso_et_background"
		         android:id="@+id/introEt"
		         android:layout_marginTop="5dp"
		         android:gravity="left|top"
		         android:hint="请简要说明您的需求"
		         android:textColor="#333333"
		         />
		            <Button android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:background="@drawable/soso_button_bg"
		                android:id="@+id/saveAndSend"
		                android:text="保存并发布"
		                android:textColor="#4b5e00"
		    			android:textSize="22dp"
		    			android:layout_marginTop="10dp"
		    			android:layout_marginBottom="10dp"
		                />
        </LinearLayout>
        
    </ScrollView>
</LinearLayout>