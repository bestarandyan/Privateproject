<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:gravity="center_horizontal"
    >
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    >
	            <ImageView
	                android:id="@+id/image"
	                android:layout_width="130dp"
	                android:layout_height="130dp"
	                android:background="@drawable/sc_imagebiankuang"
	                android:padding="5dp"
	                 />
	             <ProgressBar  
				    android:id="@+id/progressBar" 
				    android:layout_width="130dp"  
				    android:layout_height="130dp"  
				    android:progressDrawable="@drawable/sc_progress_style"
				    android:max="100" 
				    android:progress="0" 
				    android:indeterminate="false"
	                android:indeterminateOnly="false"
	             	android:padding="2dip"
				    android:secondaryProgress="0" 
			    /> 
			    <TextView android:layout_width="120dp"
			        android:layout_height="wrap_content"
			        android:text=""
			        android:gravity="center"
			        android:textColor="#FFFFFF"
			        android:textSize="25dp"
			        android:textStyle="bold"
			        android:id="@+id/numberUpload"
			        android:layout_centerInParent="true"/>
			    <ImageView
			        android:id="@+id/gou"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignRight="@+id/numberUpload"
			        android:layout_below="@+id/numberUpload"
			        android:layout_marginTop="40dp"/>
			</RelativeLayout>
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2012-08-02"
                android:id="@+id/text"
                android:gravity="center_horizontal"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>