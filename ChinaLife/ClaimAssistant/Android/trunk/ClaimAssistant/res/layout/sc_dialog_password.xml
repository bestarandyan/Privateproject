<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sc_dialog_border"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sc_tck_title_bg"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="请输入密码："
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical"
        android:text="客户端保存的密码为abcd1234，不能通过校验，请输入您最新设置的密码或修改密码。"
        android:textColor="#333333"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/passExplainTv"
        android:textSize="14sp" />
	<EditText
      	android:id="@+id/passwordEt2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/sc_text_bg"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_margin="10dp"
        android:hint="请输入最新设置的密码"
        android:textSize="16sp" >
     </EditText>
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="10dp"
	    >
	    	<Button
                android:id="@+id/passwordBtn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/sc_cs_btn"
                android:padding="4dp"
                android:text="确认"
                android:textColor="#FFFFFF"
                android:textSize="16sp" 
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                />
	    	<Button
                android:id="@+id/passwordAmendBtn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/sc_cs_btn"
                android:padding="4dp"
                android:text="修改密码"
                android:textColor="#FFFFFF"
                android:textSize="16sp" 
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                />
	</LinearLayout>
</LinearLayout>