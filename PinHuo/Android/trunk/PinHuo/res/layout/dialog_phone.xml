<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sc_dialog_border"
    android:orientation="vertical" >
     <TextView  android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="提示："
            android:textSize="22sp" 
            android:padding="10dp"
            />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginRight="1dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" >


        <TextView android:id="@+id/tellTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            
            android:textColor="#333333"
            android:text="是否拨打18912716840"
            android:textSize="18sp" />
    </LinearLayout>

	<View android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@drawable/soso_zc_line"
	    android:layout_marginTop="5dp"
	    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
         <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/title_bg_color"
            android:id="@+id/rb2"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:background="@null"
            android:layout_weight="1"
            android:textSize="20sp" />
        <View android:layout_width="1dp"
	            android:layout_height="match_parent"
	            android:background="@drawable/id_tanchu_line"
	            android:layout_marginTop="-2dp"
	            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="拨打"
            android:textColor="@color/title_bg_color"
            android:id="@+id/rb1"
            android:background="@null"
            android:layout_weight="1"
            android:textSize="20sp" />
       
    </LinearLayout>


    

</LinearLayout>